@model IEnumerable<RentalTourismSystem.Models.ManutencaoVeiculo>

@{
    ViewData["Title"] = "Histórico de Manutenções";
    var veiculo = ViewBag.Veiculo as RentalTourismSystem.Models.Veiculo;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2><i class="fas fa-history"></i> Histórico de Manutenções do Veículo</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Veiculos" asp-action="Index">Veículos</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Veiculos" asp-action="Details" asp-route-id="@veiculo.Id">@veiculo.Marca @veiculo.Modelo</a></li>
                    <li class="breadcrumb-item active">Histórico de Manutenções</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Informações do Veículo -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-car"></i> Informações do Veículo</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <strong>Veículo:</strong><br />
                    @veiculo.Marca @veiculo.Modelo (@veiculo.Ano)
                </div>
                <div class="col-md-2">
                    <strong>Placa:</strong><br />
                    @veiculo.Placa
                </div>
                <div class="col-md-2">
                    <strong>Quilometragem:</strong><br />
                    @veiculo.Quilometragem.ToString("N0") km
                </div>
                <div class="col-md-2">
                    <strong>Status:</strong><br />
                    @veiculo.StatusCarro?.Status
                </div>
                <div class="col-md-3">
                    <strong>Agência:</strong><br />
                    @veiculo.Agencia?.Nome
                </div>
            </div>
        </div>
    </div>

    <!-- Estatísticas -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-wrench"></i> Total de Manutenções</h5>
                    <h3>@ViewBag.TotalManutencoes</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-dollar-sign"></i> Custo Total</h5>
                    <h3>@ViewBag.CustoTotal.ToString("C")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-chart-line"></i> Custo Médio</h5>
                    <h3>@ViewBag.MediaCusto.ToString("C")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-calendar"></i> Última Manutenção</h5>
                    <h3>@(ViewBag.UltimaManutencao != null ? ((DateTime)ViewBag.UltimaManutencao).ToString("dd/MM/yyyy") : "N/A")</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Botão para nova manutenção -->
    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
    {
        <div class="mb-3">
            <a asp-action="Create" asp-route-veiculoId="@veiculo.Id" class="btn btn-success">
                <i class="fas fa-plus"></i> Nova Manutenção para este Veículo
            </a>
        </div>
    }

    <!-- Lista de Manutenções -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-list"></i> Histórico Completo</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>Data Agendada</th>
                                <th>Tipo</th>
                                <th>Status</th>
                                <th>Descrição</th>
                                <th>Km</th>
                                <th>Custo</th>
                                <th>Marcadores</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.DataAgendada.ToString("dd/MM/yyyy")<br />
                                        <small class="text-muted">@item.DataAgendada.ToString("HH:mm")</small>
                                    </td>
                                    <td>@item.TipoManutencao?.Nome</td>
                                    <td>
                                        @if (item.StatusManutencao?.Status == "Agendada")
                                        {
                                            <span class="badge badge-warning">@item.StatusManutencao?.Status</span>
                                        }
                                        else if (item.StatusManutencao?.Status == "Em Andamento")
                                        {
                                            <span class="badge badge-info">@item.StatusManutencao?.Status</span>
                                        }
                                        else if (item.StatusManutencao?.Status == "Concluída")
                                        {
                                            <span class="badge badge-success">@item.StatusManutencao?.Status</span>
                                        }
                                        else if (item.StatusManutencao?.Status == "Cancelada")
                                        {
                                            <span class="badge badge-danger">@item.StatusManutencao?.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">@item.StatusManutencao?.Status</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Descricao.Length > 50)
                                        {
                                            @item.Descricao.Substring(0, 50)<text>...</text>
                                        }
                                        else
                                        {
                                            @item.Descricao
                                        }
                                    </td>
                                    <td>@item.QuilometragemAtual.ToString("N0")</td>
                                    <td><strong>@item.CustoTotal.ToString("C")</strong></td>
                                    <td>
                                        @if (item.Preventiva)
                                        {
                                            <span class="badge badge-primary" title="Preventiva"><i class="fas fa-shield-alt"></i></span>
                                        }
                                        @if (item.Urgente)
                                        {
                                            <span class="badge badge-danger" title="Urgente"><i class="fas fa-exclamation-triangle"></i></span>
                                        }
                                        @if (item.EmGarantia)
                                        {
                                            <span class="badge badge-success" title="Em Garantia"><i class="fas fa-certificate"></i></span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detalhes">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="font-weight-bold bg-light">
                                <td colspan="5" class="text-right">Total Geral:</td>
                                <td colspan="3"><strong class="text-success">@Model.Sum(m => m.CustoTotal).ToString("C")</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Este veículo ainda não possui histórico de manutenções.
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Veiculos" asp-action="Details" asp-route-id="@veiculo.Id" class="btn btn-info">
            <i class="fas fa-car"></i> Voltar ao Veículo
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-list"></i> Ver Todas as Manutenções
        </a>
    </div>
</div>

@model IEnumerable<RentalTourismSystem.Models.ManutencaoVeiculo>

@{
    ViewData["Title"] = "Manutenções de Veículos";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2><i class="fas fa-tools"></i> Manutenções de Veículos</h2>
        </div>
    </div>

    <!-- Estatísticas -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-list"></i> Total de Manutenções</h5>
                    <h3>@ViewBag.TotalManutencoes</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-calendar-check"></i> Agendadas</h5>
                    <h3>@ViewBag.ManutencoesAgendadas</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-cog"></i> Em Andamento</h5>
                    <h3>@ViewBag.ManutencoesEmAndamento</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-money-bill-wave"></i> Custo Total</h5>
                    <h3>@ViewBag.CustoTotal.ToString("C")</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-filter"></i> Filtros de Pesquisa</h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Veículo</label>
                            <select name="veiculoId" class="form-control" asp-items="ViewBag.VeiculoIdFiltro">
                                <option value="">Todos os veículos</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label>Status</label>
                            <select name="statusId" class="form-control" asp-items="ViewBag.StatusIdFiltro">
                                <option value="">Todos os status</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label>Tipo</label>
                            <select name="tipoId" class="form-control" asp-items="ViewBag.TipoIdFiltro">
                                <option value="">Todos os tipos</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label>Data Início</label>
                            <input type="date" name="dataInicio" class="form-control" value="@ViewBag.DataInicio" />
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label>Data Fim</label>
                            <input type="date" name="dataFim" class="form-control" value="@ViewBag.DataFim" />
                        </div>
                    </div>
                    <div class="col-md-1">
                        <div class="form-group">
                            <label>&nbsp;</label>
                            <button type="submit" class="btn btn-primary btn-block"><i class="fas fa-search"></i></button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="preventiva" value="true" @(ViewBag.Preventiva == true ? "checked" : "") />
                            <label class="form-check-label">Apenas Preventivas</label>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="urgente" value="true" @(ViewBag.Urgente == true ? "checked" : "") />
                            <label class="form-check-label">Apenas Urgentes</label>
                        </div>
                    </div>
                    <div class="col-md-6 text-right">
                        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-eraser"></i> Limpar Filtros</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Botões de Ação -->
    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
    {
        <div class="mb-3">
            <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Nova Manutenção</a>
            <a asp-action="Relatorio" class="btn btn-info"><i class="fas fa-chart-bar"></i> Relatório</a>
        </div>
    }

    <!-- Tabela de Manutenções -->
    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>Veículo</th>
                                <th>Tipo</th>
                                <th>Status</th>
                                <th>Data Agendada</th>
                                <th>Quilometragem</th>
                                <th>Custo Total</th>
                                <th>Marcadores</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.Veiculo?.Marca @item.Veiculo?.Modelo</strong><br />
                                        <small class="text-muted">@item.Veiculo?.Placa</small>
                                    </td>
                                    <td>@item.TipoManutencao?.Nome</td>
                                    <td>
                                        @if (item.StatusManutencao?.Status == "Agendada")
                                        {
                                            <span class="badge badge-warning">@item.StatusManutencao?.Status</span>
                                        }
                                        else if (item.StatusManutencao?.Status == "Em Andamento")
                                        {
                                            <span class="badge badge-info">@item.StatusManutencao?.Status</span>
                                        }
                                        else if (item.StatusManutencao?.Status == "Concluída")
                                        {
                                            <span class="badge badge-success">@item.StatusManutencao?.Status</span>
                                        }
                                        else if (item.StatusManutencao?.Status == "Cancelada")
                                        {
                                            <span class="badge badge-danger">@item.StatusManutencao?.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">@item.StatusManutencao?.Status</span>
                                        }
                                    </td>
                                    <td>
                                        @item.DataAgendada.ToString("dd/MM/yyyy HH:mm")<br />
                                        @if (item.DiasAteAgendamento > 0)
                                        {
                                            <small class="text-muted">Em @item.DiasAteAgendamento dia(s)</small>
                                        }
                                        else if (item.DiasAteAgendamento == 0)
                                        {
                                            <small class="text-warning"><strong>Hoje</strong></small>
                                        }
                                        else
                                        {
                                            <small class="text-danger">Atrasada</small>
                                        }
                                    </td>
                                    <td>@item.QuilometragemAtual.ToString("N0") km</td>
                                    <td>
                                        <strong>@item.CustoTotal.ToString("C")</strong>
                                    </td>
                                    <td>
                                        @if (item.Preventiva)
                                        {
                                            <span class="badge badge-primary" title="Manutenção Preventiva"><i class="fas fa-shield-alt"></i> Preventiva</span>
                                        }
                                        @if (item.Urgente)
                                        {
                                            <span class="badge badge-danger" title="Urgente"><i class="fas fa-exclamation-triangle"></i> Urgente</span>
                                        }
                                        @if (item.EmGarantia)
                                        {
                                            <span class="badge badge-success" title="Em Garantia"><i class="fas fa-certificate"></i> Garantia</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detalhes">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                                            {
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            }
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Excluir">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Nenhuma manutenção encontrada com os filtros aplicados.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Inicializar tooltips
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}

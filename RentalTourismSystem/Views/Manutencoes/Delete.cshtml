@model RentalTourismSystem.Models.ManutencaoVeiculo

@{
    ViewData["Title"] = "Excluir Manutenção";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="text-danger"><i class="fas fa-trash"></i> Excluir Manutenção</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Manutenções</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">Detalhes</a></li>
                    <li class="breadcrumb-item active">Excluir</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="alert alert-danger">
        <h4><i class="fas fa-exclamation-triangle"></i> Atenção!</h4>
        <p>Você tem certeza que deseja excluir esta manutenção? Esta ação não pode ser desfeita.</p>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0"><i class="fas fa-info-circle"></i> Dados da Manutenção</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Veículo:</dt>
                <dd class="col-sm-9">
                    <strong>@Model.Veiculo?.Marca @Model.Veiculo?.Modelo</strong> - @Model.Veiculo?.Placa
                </dd>

                <dt class="col-sm-3">Tipo:</dt>
                <dd class="col-sm-9">@Model.TipoManutencao?.Nome</dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">
                    @if (Model.StatusManutencao?.Status == "Agendada")
                    {
                        <span class="badge badge-warning">@Model.StatusManutencao?.Status</span>
                    }
                    else if (Model.StatusManutencao?.Status == "Em Andamento")
                    {
                        <span class="badge badge-info">@Model.StatusManutencao?.Status</span>
                    }
                    else if (Model.StatusManutencao?.Status == "Concluída")
                    {
                        <span class="badge badge-success">@Model.StatusManutencao?.Status</span>
                    }
                    else if (Model.StatusManutencao?.Status == "Cancelada")
                    {
                        <span class="badge badge-danger">@Model.StatusManutencao?.Status</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">@Model.StatusManutencao?.Status</span>
                    }
                </dd>

                <dt class="col-sm-3">Data Agendada:</dt>
                <dd class="col-sm-9">@Model.DataAgendada.ToString("dd/MM/yyyy HH:mm")</dd>

                @if (Model.DataInicio.HasValue)
                {
                    <dt class="col-sm-3">Data Início:</dt>
                    <dd class="col-sm-9">@Model.DataInicio.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                }

                @if (Model.DataConclusao.HasValue)
                {
                    <dt class="col-sm-3">Data Conclusão:</dt>
                    <dd class="col-sm-9">@Model.DataConclusao.Value.ToString("dd/MM/yyyy HH:mm")</dd>
                }

                <dt class="col-sm-3">Descrição:</dt>
                <dd class="col-sm-9">@Model.Descricao</dd>

                <dt class="col-sm-3">Quilometragem:</dt>
                <dd class="col-sm-9">@Model.QuilometragemAtual.ToString("N0") km</dd>

                <dt class="col-sm-3">Custo Total:</dt>
                <dd class="col-sm-9"><strong class="text-danger">@Model.CustoTotal.ToString("C")</strong></dd>

                @if (!string.IsNullOrEmpty(Model.Oficina))
                {
                    <dt class="col-sm-3">Oficina:</dt>
                    <dd class="col-sm-9">@Model.Oficina</dd>
                }

                @if (Model.Funcionario != null)
                {
                    <dt class="col-sm-3">Responsável:</dt>
                    <dd class="col-sm-9">@Model.Funcionario.Nome</dd>
                }

                @if (Model.Itens.Any())
                {
                    <dt class="col-sm-3">Itens:</dt>
                    <dd class="col-sm-9">
                        <span class="badge badge-info">@Model.Itens.Count item(ns) cadastrado(s)</span>
                        <br />
                        <small class="text-muted">Os itens também serão excluídos</small>
                    </dd>
                }
            </dl>

            @if (Model.Preventiva || Model.Urgente)
            {
                <hr />
                <div>
                    <strong>Marcadores:</strong><br />
                    @if (Model.Preventiva)
                    {
                        <span class="badge badge-primary mt-1"><i class="fas fa-shield-alt"></i> Manutenção Preventiva</span>
                    }
                    @if (Model.Urgente)
                    {
                        <span class="badge badge-danger mt-1"><i class="fas fa-exclamation-triangle"></i> Urgente</span>
                    }
                </div>
            }
        </div>
    </div>

    <div class="mt-4">
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Confirmar Exclusão
            </button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info">
                <i class="fas fa-eye"></i> Ver Detalhes
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times"></i> Cancelar
            </a>
        </form>
    </div>
</div>

@model RentalTourismSystem.Models.ManutencaoVeiculo

@{
    ViewData["Title"] = "Nova Manutenção";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2><i class="fas fa-plus"></i> Nova Manutenção de Veículo</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Manutenções</a></li>
                    <li class="breadcrumb-item active">Nova Manutenção</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-tools"></i> Cadastrar Nova Manutenção</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <!-- Veículo -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="VeiculoId" class="control-label"></label>
                                    <select asp-for="VeiculoId" class="form-control" asp-items="ViewBag.VeiculoId" required>
                                        <option value="">Selecione um veículo</option>
                                    </select>
                                    <span asp-validation-for="VeiculoId" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Tipo de Manutenção -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="TipoManutencaoId" class="control-label"></label>
                                    <select asp-for="TipoManutencaoId" class="form-control" asp-items="ViewBag.TipoManutencaoId" required>
                                        <option value="">Selecione o tipo</option>
                                    </select>
                                    <span asp-validation-for="TipoManutencaoId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Status -->
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="StatusManutencaoId" class="control-label"></label>
                                    <select asp-for="StatusManutencaoId" class="form-control" asp-items="ViewBag.StatusManutencaoId" required>
                                        <option value="">Selecione o status</option>
                                    </select>
                                    <span asp-validation-for="StatusManutencaoId" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Responsável -->
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="FuncionarioId" class="control-label"></label>
                                    <select asp-for="FuncionarioId" class="form-control" asp-items="ViewBag.FuncionarioId">
                                        <option value="">Não atribuído</option>
                                    </select>
                                    <span asp-validation-for="FuncionarioId" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Oficina -->
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Oficina" class="control-label"></label>
                                    <input asp-for="Oficina" class="form-control" placeholder="Nome da oficina" />
                                    <span asp-validation-for="Oficina" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Data Agendada -->
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="DataAgendada" class="control-label"></label>
                                    <input asp-for="DataAgendada" type="datetime-local" class="form-control" required />
                                    <span asp-validation-for="DataAgendada" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Data Início -->
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="DataInicio" class="control-label"></label>
                                    <input asp-for="DataInicio" type="datetime-local" class="form-control" />
                                    <span asp-validation-for="DataInicio" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Data Conclusão -->
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="DataConclusao" class="control-label"></label>
                                    <input asp-for="DataConclusao" type="datetime-local" class="form-control" />
                                    <span asp-validation-for="DataConclusao" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Quilometragem Atual -->
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="QuilometragemAtual" class="control-label"></label>
                                    <input asp-for="QuilometragemAtual" type="number" class="form-control" required />
                                    <span asp-validation-for="QuilometragemAtual" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Próxima Quilometragem -->
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="ProximaQuilometragem" class="control-label"></label>
                                    <input asp-for="ProximaQuilometragem" type="number" class="form-control" />
                                    <span asp-validation-for="ProximaQuilometragem" class="text-danger"></span>
                                    <small class="form-text text-muted">Quilometragem para próxima manutenção preventiva</small>
                                </div>
                            </div>

                            <!-- Garantia -->
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="GarantiaDias" class="control-label"></label>
                                    <input asp-for="GarantiaDias" type="number" class="form-control" />
                                    <span asp-validation-for="GarantiaDias" class="text-danger"></span>
                                    <small class="form-text text-muted">Dias de garantia da manutenção</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Custo Geral -->
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Custo" class="control-label"></label>
                                    <input asp-for="Custo" type="number" step="0.01" class="form-control" placeholder="0,00" />
                                    <span asp-validation-for="Custo" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Custo Peças -->
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="CustoPecas" class="control-label"></label>
                                    <input asp-for="CustoPecas" type="number" step="0.01" class="form-control" placeholder="0,00" />
                                    <span asp-validation-for="CustoPecas" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Custo Mão de Obra -->
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="CustoMaoObra" class="control-label"></label>
                                    <input asp-for="CustoMaoObra" type="number" step="0.01" class="form-control" placeholder="0,00" />
                                    <span asp-validation-for="CustoMaoObra" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Descrição -->
                            <div class="col-md-8">
                                <div class="form-group">
                                    <label asp-for="Descricao" class="control-label"></label>
                                    <textarea asp-for="Descricao" class="form-control" rows="3" required placeholder="Descreva o problema ou serviço a ser realizado"></textarea>
                                    <span asp-validation-for="Descricao" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Nota Fiscal -->
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="NotaFiscal" class="control-label"></label>
                                    <input asp-for="NotaFiscal" class="form-control" placeholder="Número da NF" />
                                    <span asp-validation-for="NotaFiscal" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Observações -->
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label asp-for="Observacoes" class="control-label"></label>
                                    <textarea asp-for="Observacoes" class="form-control" rows="3" placeholder="Observações adicionais (opcional)"></textarea>
                                    <span asp-validation-for="Observacoes" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Checkboxes -->
                            <div class="col-md-6">
                                <div class="form-check mb-3">
                                    <input asp-for="Preventiva" class="form-check-input" />
                                    <label asp-for="Preventiva" class="form-check-label">
                                        <i class="fas fa-shield-alt text-primary"></i> Manutenção Preventiva
                                    </label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-check mb-3">
                                    <input asp-for="Urgente" class="form-check-input" />
                                    <label asp-for="Urgente" class="form-check-label">
                                        <i class="fas fa-exclamation-triangle text-danger"></i> Urgente
                                    </label>
                                </div>
                            </div>
                        </div>

                        <hr />

                        <div class="form-group">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Cadastrar Manutenção
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function () {
            // Definir data agendada padrão como agora
            if (!$('#DataAgendada').val()) {
                var now = new Date();
                now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
                $('#DataAgendada').val(now.toISOString().slice(0, 16));
            }

            // Quando selecionar um veículo, buscar quilometragem atual
            $('#VeiculoId').change(function () {
                var veiculoId = $(this).val();
                if (veiculoId) {
                    $.ajax({
                        url: '/Veiculos/GetVeiculoData/' + veiculoId,
                        type: 'GET',
                        success: function (data) {
                            if (data.quilometragem) {
                                $('#QuilometragemAtual').val(data.quilometragem);
                            }
                        }
                    });
                }
            });
        });
    </script>
}

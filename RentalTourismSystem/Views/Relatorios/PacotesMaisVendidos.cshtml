@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Pacotes Mais Vendidos";
}

<div class="row mb-4">
    <div class="col-12">
        <h2>
            <i class="fas fa-medal me-2"></i>Ranking: Pacotes Mais Vendidos
        </h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Relatórios</a></li>
                <li class="breadcrumb-item active">Pacotes Mais Vendidos</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    @{
        int contador = 1;
    }
    @foreach (var item in Model.Take(6))
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 @(contador <= 3 ? "border-warning" : "")">
                @if (contador <= 3)
                {
                    <div class="card-header bg-warning text-dark text-center">
                        <h5 class="mb-0">
                            @if (contador == 1)
                            {
                                <i class="fas fa-crown me-1"></i>
                            }
                            else if (contador == 2)
                            {
                                <i class="fas fa-medal me-1"></i>
                            }
                            else
                            {
                                <i class="fas fa-award me-1"></i>
                            }
                            @(contador)º Lugar
                        </h5>
                    </div>
                }
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-primary">@item.Pacote.Nome</h5>
                    <p class="card-text small">@item.Pacote.Descricao</p>
                    <div class="mt-auto">
                        <div class="row text-center mb-3">
                            <div class="col-4">
                                <div class="border rounded p-2">
                                    <h6 class="text-primary mb-0">@item.TotalReservas</h6>
                                    <small class="text-muted">Reservas</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="border rounded p-2">
                                    <h6 class="text-info mb-0">@item.TotalPessoas</h6>
                                    <small class="text-muted">Pessoas</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="border rounded p-2">
                                    <h6 class="text-success mb-0">@item.ReceitaTotal.ToString("C")</h6>
                                    <small class="text-muted">Receita</small>
                                </div>
                            </div>
                        </div>
                        <div class="text-center">
                            <small class="text-muted">Destino:</small><br>
                            <strong>@item.Pacote.Destino</strong><br>
                            <small class="text-muted">Duração: @item.Pacote.Duracao dias</small><br>
                            <span class="text-success fw-bold">@item.Pacote.Preco.ToString("C") por pessoa</span>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a asp-controller="PacotesViagens" asp-action="Details" asp-route-id="@item.Pacote.Id" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-eye me-1"></i>Ver Detalhes
                    </a>
                </div>
            </div>
        </div>
        contador++;
    }
</div>

@if (!Model.Any())
{
    <div class="text-center text-muted py-5">
        <i class="fas fa-suitcase fa-4x mb-3"></i>
        <h4>Nenhum pacote encontrado</h4>
        <p>Ainda não há dados de vendas de pacotes.</p>
        <a asp-controller="PacotesViagens" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Criar Primeiro Pacote
        </a>
    </div>
}

<!-- Análise detalhada -->
@if (Model.Any())
{
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-line me-2"></i>Análise Detalhada
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Ranking</th>
                                    <th>Pacote</th>
                                    <th>Total Reservas</th>
                                    <th>Total Pessoas</th>
                                    <th>Receita Total</th>
                                    <th>Ticket Médio</th>
                                    <th>Preço Unitário</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int pos = 1;
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <span class="fw-bold">@(pos)º</span>
                                        </td>
                                        <td>
                                            <strong>@item.Pacote.Nome</strong><br>
                                            <small class="text-muted">@item.Pacote.Destino - @item.Pacote.Duracao dias</small>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">@item.TotalReservas</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@item.TotalPessoas</span>
                                        </td>
                                        <td class="text-success fw-bold">@item.ReceitaTotal.ToString("C")</td>
                                        <td>@(item.TotalReservas > 0 ? (item.ReceitaTotal / item.TotalReservas).ToString("C") : "R$ 0,00")</td>
                                        <td>@item.Pacote.Preco.ToString("C")</td>
                                    </tr>
                                    pos++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
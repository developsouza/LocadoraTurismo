@model IEnumerable<RentalTourismSystem.Models.ReservaViagem>
@{
    ViewData["Title"] = "Relatório de Reservas por Período";

    // PROTEÇÕES CONTRA NULL
    var listaReservas = Model ?? Enumerable.Empty<RentalTourismSystem.Models.ReservaViagem>();
    var dataInicio = ViewBag.DataInicio != null ? ((DateTime)ViewBag.DataInicio).ToString("yyyy-MM-dd") : "";
    var dataFim = ViewBag.DataFim != null ? ((DateTime)ViewBag.DataFim).ToString("yyyy-MM-dd") : "";
}

<div class="row mb-4">
    <div class="col-12">
        <h2>
            <i class="fas fa-chart-line me-2"></i>Relatório de Reservas de Viagem por Período
        </h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Relatórios</a></li>
                <li class="breadcrumb-item active">Reservas por Período</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Filtros -->
<div class="card mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
            <i class="fas fa-filter me-2"></i>Filtros de Período
        </h5>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-3">
                <label for="dataInicio" class="form-label">Data Início</label>
                <input type="date" class="form-control" id="dataInicio" name="dataInicio" value="@dataInicio">
            </div>
            <div class="col-md-3">
                <label for="dataFim" class="form-label">Data Fim</label>
                <input type="date" class="form-control" id="dataFim" name="dataFim" value="@dataFim">
            </div>
            <div class="col-md-3">
                <label for="statusId" class="form-label">Status</label>
                @Html.DropDownList("statusId", ViewBag.StatusReservas as SelectList, "Todos os status", new { @class = "form-select" })
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="fas fa-search me-1"></i>Filtrar
                </button>
                <button type="button" class="btn btn-outline-secondary" onclick="window.print()">
                    <i class="fas fa-print me-1"></i>Imprimir
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Resumo -->
<div class="row mb-4">
    <div class="col-md-2">
        <div class="card bg-primary text-white">
            <div class="card-body text-center">
                <h4>@ViewBag.TotalReservas</h4>
                <small>Total de Reservas</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h4>@(((decimal?)ViewBag.ReceitaTotal ?? 0).ToString("C"))</h4>
                <small>Receita Total</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h4>@ViewBag.TotalPessoas</h4>
                <small>Total de Pessoas</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-warning text-dark">
            <div class="card-body text-center">
                <h4>@ViewBag.ReservasConfirmadas</h4>
                <small>Confirmadas</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-secondary text-white">
            <div class="card-body text-center">
                <h4>@ViewBag.ReservasPendentes</h4>
                <small>Pendentes</small>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card bg-danger text-white">
            <div class="card-body text-center">
                <h4>@ViewBag.ReservasCanceladas</h4>
                <small>Canceladas</small>
            </div>
        </div>
    </div>
</div>

<!-- Tabela de Reservas -->
<div class="card">
    <div class="card-header bg-secondary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="fas fa-list me-2"></i>Lista de Reservas
        </h5>
        <a asp-action="ExportarCSV" asp-route-relatorio="reservas" asp-route-dataInicio="@dataInicio" asp-route-dataFim="@dataFim" class="btn btn-sm btn-light">
            <i class="fas fa-download me-1"></i>Exportar CSV
        </a>
    </div>
    <div class="card-body">
        @if (listaReservas.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Data Reserva</th>
                            <th>Cliente</th>
                            <th>Pacote</th>
                            <th>Data Viagem</th>
                            <th>Pessoas</th>
                            <th>Status</th>
                            <th>Valor</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var reserva in listaReservas)
                        {
                            <tr>
                                <td>@reserva.DataReserva.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <strong>@(reserva.Cliente?.Nome ?? "N/A")</strong><br>
                                    <small class="text-muted">@(reserva.Cliente?.Email ?? "")</small>
                                </td>
                                <td>
                                    <strong>@(reserva.PacoteViagem?.Nome ?? "N/A")</strong><br>
                                    <small class="text-muted">@(reserva.PacoteViagem?.Destino ?? "")</small>
                                </td>
                                <td>
                                    @reserva.DataViagem.ToString("dd/MM/yyyy")<br>
                                    <small class="text-muted">
                                        @if (reserva.DataViagem > DateTime.Now)
                                        {
                                            var dias = (reserva.DataViagem - DateTime.Now).Days;
                                            <span class="badge bg-info">em @dias dias</span>
                                        }
                                        else if (reserva.DataViagem.Date == DateTime.Now.Date)
                                        {
                                            <span class="badge bg-warning">hoje</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">realizada</span>
                                        }
                                    </small>
                                </td>
                                <td>@reserva.Quantidade</td>
                                <td>
                                    @{
                                        string badgeClass = (reserva.StatusReservaViagem?.Status ?? "") switch
                                        {
                                            "Pendente" => "bg-warning",
                                            "Confirmada" => "bg-success",
                                            "Cancelada" => "bg-danger",
                                            "Realizada" => "bg-info",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badgeClass">@(reserva.StatusReservaViagem?.Status ?? "N/A")</span>
                                </td>
                                <td class="text-success fw-bold">
                                    @{
                                        var valorTotalReserva = reserva.ValorTotal + (reserva.ServicosAdicionais?.Sum(s => s.Preco) ?? 0);
                                    }
                                    @valorTotalReserva.ToString("C")
                                    @if (reserva.ServicosAdicionais?.Any() ?? false)
                                    {
                                        <br>
                                        <small class="text-muted">
                                            Pacote: @reserva.ValorTotal.ToString("C")
                                            <br>
                                            + Serviços: @reserva.ServicosAdicionais.Sum(s => s.Preco).ToString("C")
                                        </small>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-controller="ReservasViagens" asp-action="Details" asp-route-id="@reserva.Id" class="btn btn-outline-info" title="Ver Detalhes">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-controller="ReservasViagens" asp-action="Edit" asp-route-id="@reserva.Id" class="btn btn-outline-primary" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5 text-muted">
                <i class="fas fa-inbox fa-4x mb-3"></i>
                <h5>Nenhuma reserva encontrada</h5>
                <p>Ajuste os filtros e tente novamente.</p>
            </div>
        }
    </div>
</div>

<!-- Análise por Pacotes -->
@if (listaReservas.Any())
{
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-suitcase me-2"></i>Top 5 Pacotes
                    </h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Pacote</th>
                                    <th class="text-center">Reservas</th>
                                    <th class="text-end">Receita</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var topPacotes = listaReservas
                                    .Where(r => r.PacoteViagem != null && r.StatusReservaViagem != null && r.StatusReservaViagem.Status == "Confirmada")
                                    .GroupBy(r => r.PacoteViagem.Nome)
                                    .Select(g => new
                                    {
                                        Nome = g.Key,
                                        Quantidade = g.Count(),
                                        Receita = g.Sum(r => r.ValorTotal)
                                    })
                                    .OrderByDescending(p => p.Quantidade)
                                    .Take(5);
                                }
                                @foreach (var pacote in topPacotes)
                                {
                                    <tr>
                                        <td>@pacote.Nome</td>
                                        <td class="text-center"><span class="badge bg-primary">@pacote.Quantidade</span></td>
                                        <td class="text-end text-success fw-bold">@pacote.Receita.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-chart-pie me-2"></i>Distribuição por Status
                    </h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Status</th>
                                    <th class="text-center">Quantidade</th>
                                    <th class="text-end">Percentual</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var totalReservasCalc = listaReservas.Count();
                                    var distribuicao = listaReservas
                                    .Where(r => r.StatusReservaViagem != null)
                                    .GroupBy(r => r.StatusReservaViagem.Status)
                                    .Select(g => new
                                    {
                                        Status = g.Key,
                                        Quantidade = g.Count(),
                                        Percentual = totalReservasCalc > 0 ? (g.Count() * 100.0 / totalReservasCalc) : 0
                                    })
                                    .OrderByDescending(d => d.Quantidade);
                                }
                                @foreach (var item in distribuicao)
                                {
                                    <tr>
                                        <td>
                                            @{
                                                string badge = item.Status switch
                                                {
                                                    "Pendente" => "bg-warning",
                                                    "Confirmada" => "bg-success",
                                                    "Cancelada" => "bg-danger",
                                                    "Realizada" => "bg-info",
                                                    _ => "bg-secondary"
                                                };
                                            }
                                            <span class="badge @badge">@item.Status</span>
                                        </td>
                                        <td class="text-center">@item.Quantidade</td>
                                        <td class="text-end">@item.Percentual.ToString("F1")%</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
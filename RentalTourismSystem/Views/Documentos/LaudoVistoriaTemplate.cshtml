    <style>
        /* Estilos otimizados para impressão A4 */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            font-size: 9pt;
            line-height: 1.2;
            color: #000;
            background: #fff;
        }

        .documento-laudo {
            max-width: 800px;
            margin: 0 auto;
            padding: 10px;
        }

        /* Cabeçalho compacto */
        .cabecalho-laudo {
            text-align: center;
            margin-bottom: 10px;
            border-bottom: 2px solid #000;
            padding-bottom: 6px;
        }

        .cabecalho-laudo h1 {
            font-size: 14pt;
            font-weight: bold;
            margin-bottom: 4px;
            text-transform: uppercase;
        }

        .numero-laudo {
            font-size: 9pt;
            font-style: italic;
            margin: 0;
        }

        /* Info partes */
        .info-partes {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
            margin: 8px 0;
            font-size: 9pt;
        }

        .info-item {
            margin: 0;
        }

        /* Texto introdução */
        .texto-introducao {
            margin: 8px 0;
        }

        .texto-introducao p {
            text-align: justify;
            line-height: 1.3;
            margin: 0;
        }

        /* Dados do veículo */
        .dados-veiculo-laudo {
            border: 1px solid #333;
            padding: 8px;
            margin: 8px 0;
            background-color: #f9f9f9;
        }

        .row-dados {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px;
            margin-bottom: 4px;
        }

        .col-dados {
            font-size: 9pt;
        }

        /* Nota importante */
        .nota-importante {
            background-color: #ffe8cc;
            border-left: 3px solid #ff9800;
            padding: 6px 8px;
            margin: 8px 0;
            font-size: 8.5pt;
        }

        .nota-importante p {
            margin: 0;
            text-align: justify;
            line-height: 1.3;
        }

        /* Estado geral */
        .estado-geral {
            margin: 8px 0;
            font-size: 9pt;
        }

        .estado-geral p {
            margin: 0;
        }

        /* Tabela de vistoria compacta */
        .tabela-vistoria {
            margin: 10px 0;
        }

        .tabela-vistoria table {
            width: 100%;
            border-collapse: collapse;
            font-size: 8pt;
        }

        .tabela-vistoria th {
            background-color: #333;
            color: white;
            padding: 4px;
            text-align: center;
            font-weight: bold;
            border: 1px solid #000;
        }

        .tabela-vistoria td {
            border: 1px solid #333;
            padding: 3px 4px;
            vertical-align: middle;
        }

        .tabela-vistoria .text-center {
            text-align: center;
        }

        .opcoes-vistoria {
            display: flex;
            flex-direction: column;
            gap: 2px;
        }

        .opcoes-vistoria label {
            display: flex;
            align-items: center;
            gap: 3px;
            font-size: 7.5pt;
            margin: 0;
        }

        .opcoes-vistoria input[type="checkbox"] {
            width: 12px;
            height: 12px;
            margin: 0;
        }

        /* Observações gerais */
        .observacoes-gerais {
            margin: 10px 0;
        }

        .observacoes-gerais h3 {
            font-size: 10pt;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .campo-observacoes {
            border: 1px solid #333;
            padding: 8px;
            min-height: 60px;
        }

        .linhas-observacoes .linha-obs {
            border-bottom: 1px solid #ccc;
            margin-bottom: 8px;
            height: 12px;
        }

        /* Combustível */
        .info-combustivel {
            margin: 10px 0;
        }

        .info-combustivel h3 {
            font-size: 10pt;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .marcadores-combustivel {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 8px;
            font-size: 8.5pt;
        }

        .marcadores-combustivel label {
            display: flex;
            align-items: center;
            gap: 4px;
        }

        .marcadores-combustivel input[type="checkbox"] {
            width: 14px;
            height: 14px;
        }

        /* Campos em branco */
        .campo-blank {
            border-bottom: 1px solid #000;
            display: inline-block;
            min-width: 160px;
            padding: 0 3px;
        }

        .campo-blank-sm {
            border-bottom: 1px solid #000;
            display: inline-block;
            min-width: 70px;
            padding: 0 3px;
        }

        .campo-blank-lg {
            border-bottom: 1px solid #000;
            display: inline-block;
            min-width: 250px;
            padding: 0 3px;
        }

        /* Local e Data */
        .local-data-laudo {
            margin: 15px 0;
            text-align: center;
            font-size: 9pt;
        }

        .local-data-laudo p {
            margin: 0;
        }

        /* Assinaturas */
        .assinaturas-laudo {
            display: flex;
            justify-content: space-between;
            margin: 20px 0 10px 0;
            gap: 30px;
        }

        .assinatura-laudo {
            flex: 1;
            text-align: center;
        }

        .linha-assinatura {
            border-top: 1px solid #000;
            margin-bottom: 5px;
            margin-top: 30px;
        }

        .assinatura-laudo p {
            margin: 3px 0;
            font-size: 9pt;
        }

        .assinatura-laudo .small {
            font-size: 8pt;
            color: #555;
        }

        /* Rodapé */
        .rodape-laudo {
            text-align: center;
            margin-top: 15px;
            padding-top: 8px;
            border-top: 1px solid #ccc;
            font-size: 8pt;
            color: #666;
        }

        .rodape-laudo p {
            margin: 2px 0;
        }

        /* Impressão otimizada */
        @@media print {
            .no-print {
                display: none !important;
            }

            @@page {
                size: A4;
                margin: 1.2cm 1.5cm;
            }

            body {
                font-size: 8.5pt;
            }

            .documento-laudo {
                padding: 0;
            }

            .tabela-vistoria table {
                font-size: 7.5pt;
            }


@model RentalTourismSystem.Models.ReservaViagem
@{
    ViewData["Title"] = "Detalhes da Reserva";
}

<div class="row mb-4">
    <div class="col-12">
        <h2>
            <i class="fas fa-calendar-check me-2"></i>Reserva #@Model.Id
        </h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Reservas</a></li>
                <li class="breadcrumb-item active">Reserva #@Model.Id</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <!-- Card de Informações da Reserva -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Informações da Reserva
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <small class="text-muted">Status:</small><br>
                    @{
                        string badgeClass = Model.StatusReservaViagem.Status switch
                        {
                            "Pendente" => "bg-warning",
                            "Confirmada" => "bg-success",
                            "Cancelada" => "bg-danger",
                            "Realizada" => "bg-info",
                            _ => "bg-secondary"
                        };
                    }
                    <span class="badge @badgeClass fs-6">@Model.StatusReservaViagem.Status</span>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Data da Reserva:</small><br>
                    <strong>@Model.DataReserva.ToString("dd/MM/yyyy")</strong>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Data da Viagem:</small><br>
                    <strong>@Model.DataViagem.ToString("dd/MM/yyyy")</strong>
                    @if (Model.DataViagem > DateTime.Now)
                    {
                        var dias = (Model.DataViagem - DateTime.Now).Days;
                        <br>
                        <small class="text-info">Em @dias dia(s)</small>
                    }
                    else if (Model.DataViagem.Date == DateTime.Now.Date)
                    {
                        <br>
                        <small class="text-warning"><strong>HOJE!</strong></small>
                    }
                    else
                    {
                        <br>
                        <small class="text-muted">Viagem realizada</small>
                    }
                </div>
                <div class="mb-3">
                    <small class="text-muted">Quantidade de Pessoas:</small><br>
                    <strong>@Model.Quantidade</strong>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Valor do Pacote:</small><br>
                    <h4 class="text-success mb-0">@Model.ValorTotal.ToString("C")</h4>
                </div>
                @if (Model.ServicosAdicionais.Any())
                {
                    <div class="mb-3">
                        <small class="text-muted">Serviços Adicionais:</small><br>
                        <h5 class="text-info mb-0">@Model.ServicosAdicionais.Sum(s => s.Preco).ToString("C")</h5>
                    </div>
                    <hr>
                    <div class="mb-3">
                        <small class="text-muted">VALOR TOTAL GERAL:</small><br>
                        <h3 class="text-primary mb-0">
                            @((Model.ValorTotal + Model.ServicosAdicionais.Sum(s => s.Preco)).ToString("C"))
                        </h3>
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.Observacoes))
                {
                    <hr>
                    <div class="mb-0">
                        <small class="text-muted">Observações:</small><br>
                        <span>@Model.Observacoes</span>
                    </div>
                }
            </div>
            <div class="card-footer">
                @if (Model.StatusReservaViagem.Status == "Pendente")
                {
                    <form asp-action="ConfirmarReserva" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-success btn-sm"
                                onclick="return confirm('Confirmar esta reserva?');">
                            <i class="fas fa-check me-1"></i>Confirmar
                        </button>
                    </form>
                    <button type="button" class="btn btn-danger btn-sm"
                            data-bs-toggle="modal" data-bs-target="#modalCancelar">
                        <i class="fas fa-times me-1"></i>Cancelar
                    </button>
                }
                @if (Model.StatusReservaViagem.Status != "Cancelada" &&
                                (User.IsInRole("Admin") || User.IsInRole("Manager")))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit me-1"></i>Editar
                    </a>
                }
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="fas fa-arrow-left me-1"></i>Voltar
                </a>
            </div>
        </div>
    </div>

    <!-- Card do Cliente -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="fas fa-user me-2"></i>Cliente
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>@Model.Cliente.Nome</strong>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Email:</small><br>
                    <span>@Model.Cliente.Email</span>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Telefone:</small><br>
                    <span>@Model.Cliente.Telefone</span>
                </div>
                <div class="mb-0">
                    <small class="text-muted">CPF:</small><br>
                    <span>@Model.Cliente.CPF</span>
                </div>
            </div>
            <div class="card-footer">
                <a asp-controller="Clientes" asp-action="Details" asp-route-id="@Model.Cliente.Id"
                   class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-eye me-1"></i>Ver Cliente
                </a>
            </div>
        </div>
    </div>

    <!-- Card do Pacote -->
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">
                    <i class="fas fa-suitcase me-2"></i>Pacote de Viagem
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>@Model.PacoteViagem.Nome</strong>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Destino:</small><br>
                    <span>@Model.PacoteViagem.Destino</span>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Duração:</small><br>
                    <span>@Model.PacoteViagem.Duracao @Model.PacoteViagem.UnidadeTempo</span>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Preço por pessoa:</small><br>
                    <span class="text-success fw-bold">@Model.PacoteViagem.Preco.ToString("C")</span>
                </div>
                <div class="mb-0">
                    <small class="text-muted">Descrição:</small><br>
                    <span class="small">@Model.PacoteViagem.Descricao</span>
                </div>
            </div>
            <div class="card-footer">
                <a asp-controller="PacotesViagens" asp-action="Details" asp-route-id="@Model.PacoteViagem.Id"
                   class="btn btn-outline-info btn-sm">
                    <i class="fas fa-eye me-1"></i>Ver Pacote
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Seção de Serviços Adicionais -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-plus-circle me-2"></i>Serviços Adicionais
                </h5>
            </div>
            <div class="card-body">
                @if (Model.ServicosAdicionais.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Serviço</th>
                                    <th>Descrição</th>
                                    <th class="text-end">Preço</th>
                                    <th class="text-center" style="width: 150px;">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var servico in Model.ServicosAdicionais)
                                {
                                    <tr>
                                        <td><strong>@servico.Nome</strong></td>
                                        <td>@servico.Descricao</td>
                                        <td class="text-end text-success">
                                            <strong>@servico.Preco.ToString("C")</strong>
                                        </td>
                                        <td class="text-center">
                                            @if (Model.StatusReservaViagem.Status != "Cancelada" &&
                                                                                (User.IsInRole("Admin") || User.IsInRole("Manager")))
                                            {
                                                <form asp-action="RemoverServico" method="post" class="d-inline"
                                                      onsubmit="return confirm('Tem certeza que deseja remover o serviço \'@servico.Nome\'?');">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="servicoId" value="@servico.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                                        <i class="fas fa-trash"></i> Remover
                                                    </button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-active">
                                    <td colspan="2" class="text-end"><strong>Subtotal Pacote:</strong></td>
                                    <td class="text-end"><strong>@Model.ValorTotal.ToString("C")</strong></td>
                                    <td></td>
                                </tr>
                                <tr class="table-active">
                                    <td colspan="2" class="text-end"><strong>Total Serviços Adicionais:</strong></td>
                                    <td class="text-end">
                                        <strong class="text-success">
                                            @Model.ServicosAdicionais.Sum(s => s.Preco).ToString("C")
                                        </strong>
                                    </td>
                                    <td></td>
                                </tr>
                                <tr class="table-primary">
                                    <td colspan="2" class="text-end"><strong>VALOR TOTAL GERAL:</strong></td>
                                    <td class="text-end">
                                        <h5 class="mb-0 text-primary">
                                            @((Model.ValorTotal + Model.ServicosAdicionais.Sum(s => s.Preco)).ToString("C"))
                                        </h5>
                                    </td>
                                    <td></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="fas fa-plus-circle fa-3x mb-3"></i>
                        <p>Nenhum serviço adicional contratado.</p>
                    </div>
                }

                @if (Model.StatusReservaViagem.Status != "Cancelada")
                {
                    <!-- Formulário inline para adicionar serviço -->
                    <div class="card mt-3 border-primary">
                        <div class="card-header bg-primary text-white">
                            <h6 class="mb-0">
                                <i class="fas fa-plus me-1"></i>Adicionar Novo Serviço
                            </h6>
                        </div>
                        <div class="card-body">
                            <form asp-action="AdicionarServico" asp-controller="ReservasViagens" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="reservaId" value="@Model.Id" />

                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label for="nome" class="form-label">
                                            <span class="text-danger">*</span> Nome do Serviço
                                        </label>
                                        <input type="text" class="form-control" id="nome" name="nome"
                                               required maxlength="100"
                                               placeholder="Ex: Transfer do aeroporto">
                                    </div>

                                    <div class="col-md-5 mb-3">
                                        <label for="descricao" class="form-label">
                                            <span class="text-danger">*</span> Descrição
                                        </label>
                                        <input type="text" class="form-control" id="descricao" name="descricao"
                                               required maxlength="500"
                                               placeholder="Descreva o serviço">
                                    </div>

                                    <div class="col-md-3 mb-3">
                                        <label for="preco" class="form-label">
                                            <span class="text-danger">*</span> Preço
                                        </label>
                                        <div class="input-group">
                                            <span class="input-group-text">R$</span>
                                            <input type="number" class="form-control" id="preco" name="preco"
                                                   step="0.01" min="0.01" required
                                                   placeholder="0,00">
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-plus me-1"></i>Adicionar Serviço
                                    </button>
                                    <button type="reset" class="btn btn-outline-secondary">
                                        <i class="fas fa-undo me-1"></i>Limpar
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning mt-3">
                        <i class="fas fa-ban me-1"></i>
                        Não é possível adicionar serviços a uma reserva cancelada.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modal para cancelar reserva -->
<div class="modal fade" id="modalCancelar" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle me-2"></i>Cancelar Reserva
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="CancelarReserva" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-1"></i>
                        Esta ação não pode ser revertida. O cliente deverá fazer uma nova reserva se desejar.
                    </div>

                    <div class="mb-3">
                        <label for="motivo" class="form-label">
                            <span class="text-danger">*</span> Motivo do Cancelamento
                        </label>
                        <textarea class="form-control" id="motivo" name="motivo"
                                  rows="3" required maxlength="500"
                                  placeholder="Informe o motivo do cancelamento..."></textarea>
                        <div class="form-text">Obrigatório informar o motivo</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>Não, manter reserva
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-ban me-1"></i>Sim, cancelar reserva
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Contador de caracteres para campos de texto
        document.addEventListener('DOMContentLoaded', function() {
            // Campo de motivo do cancelamento
            const motivoCancelamento = document.getElementById('motivo');
            if (motivoCancelamento) {
                motivoCancelamento.addEventListener('input', function() {
                    const atual = this.value.length;
                    const max = 500;
                    const restante = max - atual;
                    const formText = this.parentNode.querySelector('.form-text');

                    if (formText) {
                        const cor = restante < 50 ? 'text-warning' : restante < 20 ? 'text-danger' : 'text-muted';
                        formText.innerHTML = `Restam <span class="${cor}">${restante}</span> de ${max} caracteres (obrigatório informar o motivo)`;
                    }
                });
            }
        });
    </script>
}
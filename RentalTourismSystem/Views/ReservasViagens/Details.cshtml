@model RentalTourismSystem.Models.ReservaViagem
@{
    ViewData["Title"] = "Detalhes da Reserva";
}

<div class="row mb-4">
    <div class="col-12">
        <h2>
            <i class="fas fa-calendar-check me-2"></i>Reserva #@Model.Id
        </h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Reservas</a></li>
                <li class="breadcrumb-item active">Reserva #@Model.Id</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Informações da Reserva
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <small class="text-muted">Status:</small><br>
                    @{
                        string badgeClass = Model.StatusReservaViagem.Status switch
                        {
                            "Pendente" => "bg-warning",
                            "Confirmada" => "bg-success",
                            "Cancelada" => "bg-danger",
                            "Realizada" => "bg-info",
                            _ => "bg-secondary"
                        };
                    }
                    <span class="badge @badgeClass fs-6">@Model.StatusReservaViagem.Status</span>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Data da Reserva:</small><br>
                    <strong>@Model.DataReserva.ToString("dd/MM/yyyy")</strong>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Data da Viagem:</small><br>
                    <strong>@Model.DataViagem.ToString("dd/MM/yyyy")</strong>
                    @if (Model.DataViagem > DateTime.Now)
                    {
                        var dias = (Model.DataViagem - DateTime.Now).Days;
                        <br>
                    
                        <small class="text-info">Em @dias dias</small>
                    }
                </div>
                <div class="mb-3">
                    <small class="text-muted">Quantidade de Pessoas:</small><br>
                    <strong>@Model.Quantidade</strong>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Valor Total:</small><br>
                    <h4 class="text-success mb-0">@Model.ValorTotal.ToString("C")</h4>
                </div>
                @if (!string.IsNullOrEmpty(Model.Observacoes))
                {
                    <div class="mb-3">
                        <small class="text-muted">Observações:</small><br>
                        <span>@Model.Observacoes</span>
                    </div>
                }
            </div>
            <div class="card-footer">
                @if (Model.StatusReservaViagem.Status == "Pendente")
                {
                    <form method="post" class="d-inline">
                        <button type="button" class="btn btn-success btn-sm" onclick="confirmarReserva(@Model.Id)">
                            <i class="fas fa-check me-1"></i>Confirmar
                        </button>
                    </form>
                    <form method="post" class="d-inline ms-1">
                        <button type="button" class="btn btn-danger btn-sm" onclick="cancelarReserva(@Model.Id)">
                            <i class="fas fa-times me-1"></i>Cancelar
                        </button>
                    </form>
                }
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                    <i class="fas fa-edit me-1"></i>Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="fas fa-arrow-left me-1"></i>Voltar
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="fas fa-user me-2"></i>Cliente
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>@Model.Cliente.Nome</strong>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Email:</small><br>
                    <span>@Model.Cliente.Email</span>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Telefone:</small><br>
                    <span>@Model.Cliente.Telefone</span>
                </div>
                <div class="mb-3">
                    <small class="text-muted">CPF:</small><br>
                    <span>@Model.Cliente.Cpf</span>
                </div>
            </div>
            <div class="card-footer">
                <a asp-controller="Clientes" asp-action="Details" asp-route-id="@Model.Cliente.Id" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-eye me-1"></i>Ver Cliente
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">
                    <i class="fas fa-suitcase me-2"></i>Pacote de Viagem
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <strong>@Model.PacoteViagem.Nome</strong>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Destino:</small><br>
                    <span>@Model.PacoteViagem.Destino</span>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Duração:</small><br>
                    <span>@Model.PacoteViagem.Duracao dias</span>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Preço por pessoa:</small><br>
                    <span class="text-success fw-bold">@Model.PacoteViagem.Preco.ToString("C")</span>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Descrição:</small><br>
                    <span class="small">@Model.PacoteViagem.Descricao</span>
                </div>
            </div>
            <div class="card-footer">
                <a asp-controller="PacotesViagens" asp-action="Details" asp-route-id="@Model.PacoteViagem.Id" class="btn btn-outline-info btn-sm">
                    <i class="fas fa-eye me-1"></i>Ver Pacote
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Serviços Adicionais -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-plus-circle me-2"></i>Serviços Adicionais
                </h5>
            </div>
            <div class="card-body">
                @if (Model.ServicosAdicionais.Any())
                {
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Serviço</th>
                                    <th>Descrição</th>
                                    <th>Preço</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var servico in Model.ServicosAdicionais)
                                {
                                    <tr>
                                        <td><strong>@servico.Nome</strong></td>
                                        <td>@servico.Descricao</td>
                                        <td class="text-success">@servico.Preco.ToString("C")</td>
                                        <td>
                                            <button type="button" class="btn btn-sm btn-outline-danger"
                                                    onclick="removerServico(@servico.Id)">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="text-end">
                        <strong>Total dos Serviços: @Model.ServicosAdicionais.Sum(s => s.Preco).ToString("C")</strong>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted">
                        <i class="fas fa-plus-circle fa-3x mb-3"></i>
                        <p>Nenhum serviço adicional contratado.</p>
                    </div>
                }

                <div class="mt-3">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#servicoModal">
                        <i class="fas fa-plus me-1"></i>Adicionar Serviço
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para adicionar serviço -->
<div class="modal fade" id="servicoModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Adicionar Serviço Adicional</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/ReservasViagens/AdicionarServico" method="post">
                <div class="modal-body">
                    <input type="hidden" name="reservaId" value="@Model.Id" />
                    <div class="mb-3">
                        <label for="nome" class="form-label">Nome do Serviço</label>
                        <input type="text" class="form-control" id="nome" name="nome" required>
                    </div>
                    <div class="mb-3">
                        <label for="descricao" class="form-label">Descrição</label>
                        <textarea class="form-control" id="descricao" name="descricao" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="preco" class="form-label">Preço</label>
                        <div class="input-group">
                            <span class="input-group-text">R$</span>
                            <input type="number" class="form-control" id="preco" name="preco" step="0.01" min="0" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Adicionar Serviço</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmarReserva(id) {
            if (confirm('Confirmar esta reserva?')) {
                fetch('/ReservasViagens/ConfirmarReserva/' + id, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    }
                }).then(() => location.reload());
            }
        }

        function cancelarReserva(id) {
            if (confirm('Cancelar esta reserva?')) {
                fetch('/ReservasViagens/CancelarReserva/' + id, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    }
                }).then(() => location.reload());
            }
        }

        function removerServico(servicoId) {
            if (confirm('Remover este serviço adicional?')) {
                fetch('/ReservasViagens/RemoverServico/' + servicoId, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    }
                }).then(() => location.reload());
            }
        }
    </script>
}
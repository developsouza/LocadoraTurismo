@{
    ViewData["Title"] = "Acesso Negado";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card text-center">
            <div class="card-body py-4 py-md-5">
                <i class="fas fa-ban text-danger mb-3 mb-md-4" style="font-size: clamp(3rem, 8vw, 4rem);"></i>
                <h2 class="text-danger mb-3">Acesso Negado</h2>
                <p class="mb-4 px-3">
                    Você não tem permissão para acessar esta página ou recurso.
                </p>
                
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="alert alert-info">
                        <strong>Usuário logado:</strong> @User.Identity.Name<br />
                        <strong>Permissão necessária:</strong> Admin ou Manager
                    </div>
                    <p class="text-muted small">
                        Se você acredita que deveria ter acesso, entre em contato com um administrador.
                    </p>
                }
                else
                {
                    <div class="alert alert-warning">
                        <strong>Você não está logado.</strong><br />
                        Faça login para acessar esta página.
                    </div>
                    <a asp-action="Login" asp-controller="Account" asp-route-returnUrl="@Context.Request.Path" class="btn btn-primary mb-3">
                        <i class="fas fa-sign-in-alt"></i>
                        Fazer Login
                    </a>
                }
                
                <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">
                    <i class="fas fa-home"></i>
                    Voltar ao Início
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        @@media (max-width: 575.98px) {
            .card {
                margin: 0 0.5rem;
            }

            .card-body {
                padding: 2rem 1rem;
            }

            h2 {
                font-size: 1.5rem;
            }
        }
    </style>
}

@{
    ViewData["Title"] = "Acesso Negado";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card text-center">
            <div class="card-body py-4 py-md-5">
                <i class="fas fa-ban text-danger mb-3 mb-md-4" style="font-size: clamp(3rem, 8vw, 4rem);"></i>
                <h2 class="text-danger mb-3">Acesso Negado</h2>
                <p class="mb-4 px-3">
                    Você não tem permissão para acessar esta página ou recurso.
                </p>
                <a asp-action="Index" asp-controller="Home" class="btn btn-primary">
                    <i class="fas fa-home"></i>
                    Voltar ao Início
                </a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        @@media (max-width: 575.98px) {
            .card {
                margin: 0 0.5rem;
            }

            .card-body {
                padding: 2rem 1rem;
            }

            h2 {
                font-size: 1.5rem;
            }
        }
    </style>
}

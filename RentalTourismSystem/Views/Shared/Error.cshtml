@model ErrorViewModel
@{
    ViewData["Title"] = "Erro";
}

<div class="text-center">
    <h1 class="display-4 text-danger">
        <i class="fas fa-exclamation-triangle me-2"></i>Erro
    </h1>
    <p class="lead">Ocorreu um erro ao processar sua solicitação.</p>

    @if (Model.ShowRequestId)
    {
        <div class="card mx-auto" style="max-width: 500px;">
            <div class="card-body">
                <h5 class="card-title">ID da Requisição</h5>
                <p class="card-text">
                    <code>@Model.RequestId</code>
                </p>
                <small class="text-muted">
                    Por favor, informe este ID ao suporte técnico se o problema persistir.
                </small>
            </div>
        </div>
    }

    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
            <i class="fas fa-home me-1"></i>Voltar ao Dashboard
        </a>
    </div>
</div>
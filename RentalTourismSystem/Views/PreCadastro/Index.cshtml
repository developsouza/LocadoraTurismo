@model RentalTourismSystem.Models.PreCadastroCliente
@{
    ViewData["Title"] = "Pré-Cadastro de Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="precadastro-hero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-xl-9">
                <!-- Cabeçalho Premium -->
                <div class="text-center mb-5 hero-content">
                    <div class="hero-icon-wrapper mb-4">
                        <div class="icon-circle">
                            <i class="fas fa-car fa-3x"></i>
                        </div>
                        <div class="icon-sparkle"></div>
                    </div>
                    <h1 class="hero-title mb-3">Inicie Sua Jornada Conosco</h1>
                    <p class="hero-subtitle">
                        Faça seu pré-cadastro e garanta o melhor veículo para sua viagem.<br>
                        <strong>Processo rápido, simples e 100% seguro.</strong>
                    </p>
                    <div class="trust-badges mt-4">
                        <span class="badge-item">
                            <i class="fas fa-shield-alt"></i> Seguro
                        </span>
                        <span class="badge-item">
                            <i class="fas fa-clock"></i> Rápido
                        </span>
                        <span class="badge-item">
                            <i class="fas fa-star"></i> Confiável
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-9">
            <!-- Card do Formulário -->
            <div class="form-card shadow-premium">
                <!-- Header -->
                <div class="form-card-header">
                    <div class="header-content">
                        <i class="fas fa-clipboard-list me-2"></i>
                        <span>Preencha Seus Dados</span>
                    </div>
                    <div class="header-decoration"></div>
                </div>

                <!-- Body -->
                <div class="form-card-body">
                    <form asp-action="Index" method="post" enctype="multipart/form-data" id="formPreCadastro">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Nome Completo -->
                        <div class="form-group-modern mb-4">
                            <label asp-for="Nome" class="form-label-modern">
                                <i class="fas fa-user me-2"></i>
                                Nome Completo <span class="required">*</span>
                            </label>
                            <input asp-for="Nome" 
                                   class="form-control-modern" 
                                   placeholder="Digite seu nome completo"
                                   autofocus />
                            <span asp-validation-for="Nome" class="text-danger small d-block mt-1"></span>
                        </div>

                        <!-- CPF -->
                        <div class="form-group-modern mb-4">
                            <label asp-for="CPF" class="form-label-modern">
                                <i class="fas fa-id-card me-2"></i>
                                CPF <span class="required">*</span>
                            </label>
                            <input asp-for="CPF" 
                                   class="form-control-modern" 
                                   id="cpfInput"
                                   placeholder="000.000.000-00"
                                   maxlength="14" />
                            <span asp-validation-for="CPF" class="text-danger small d-block mt-1"></span>
                            <small class="form-hint">
                                <i class="fas fa-info-circle me-1"></i>Será usado para identificação no sistema
                            </small>
                        </div>

                        <!-- Telefone -->
                        <div class="form-group-modern mb-4">
                            <label asp-for="Telefone" class="form-label-modern">
                                <i class="fas fa-phone me-2"></i>
                                Telefone <span class="required">*</span>
                            </label>
                            <input asp-for="Telefone" 
                                   class="form-control-modern" 
                                   id="telefoneInput"
                                   placeholder="(00) 00000-0000"
                                   maxlength="15" />
                            <span asp-validation-for="Telefone" class="text-danger small d-block mt-1"></span>
                            <small class="form-hint">
                                <i class="fas fa-info-circle me-1"></i>Para contato e confirmação do cadastro
                            </small>
                        </div>

                        <!-- Upload da CNH -->
                        <div class="form-group-modern mb-4">
                            <label asp-for="CNHUpload" class="form-label-modern">
                                <i class="fas fa-id-card-alt me-2"></i>
                                Foto da CNH <span class="required">*</span>
                            </label>
                            <div class="file-upload-modern">
                                <input asp-for="CNHUpload" 
                                       type="file" 
                                       class="file-input-hidden" 
                                       id="cnhUploadInput"
                                       accept=".jpg,.jpeg,.png,.pdf" />
                                <label class="file-upload-label" for="cnhUploadInput">
                                    <div class="file-upload-icon">
                                        <i class="fas fa-cloud-upload-alt"></i>
                                    </div>
                                    <div class="file-upload-text">
                                        <span class="file-upload-title">Clique para selecionar o arquivo</span>
                                        <span class="file-upload-subtitle">ou arraste e solte aqui</span>
                                    </div>
                                    <span class="file-upload-name">Nenhum arquivo selecionado</span>
                                </label>
                            </div>
                            <span asp-validation-for="CNHUpload" class="text-danger small d-block mt-1"></span>
                            <small class="form-hint">
                                <i class="fas fa-info-circle me-1"></i>Formatos aceitos: JPG, JPEG, PNG ou PDF (máx. 5MB)
                            </small>
                            
                            <!-- Preview da imagem -->
                            <div id="imagePreview" class="mt-3" style="display: none;">
                                <div class="preview-container">
                                    <div class="preview-header">
                                        <i class="fas fa-eye me-2"></i>Pré-visualização
                                    </div>
                                    <div class="preview-body">
                                        <img id="previewImage" src="" alt="Preview CNH" class="preview-image" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Seleção de Veículo -->
                        <div class="form-group-modern mb-4">
                            <label asp-for="VeiculoId" class="form-label-modern">
                                <i class="fas fa-car me-2"></i>
                                Veículo Desejado <span class="required">*</span>
                            </label>
                            <select asp-for="VeiculoId" 
                                    class="form-control-modern" 
                                    asp-items="ViewBag.Veiculos">
                                <option value="">-- Selecione um veículo --</option>
                            </select>
                            <span asp-validation-for="VeiculoId" class="text-danger small d-block mt-1"></span>
                            <small class="form-hint">
                                <i class="fas fa-info-circle me-1"></i>Escolha o veículo que deseja alugar
                            </small>
                        </div>

                        <!-- Período de Locação -->
                        <div class="form-group-modern mb-4">
                            <div class="section-title mb-3">
                                <i class="fas fa-calendar-alt me-2"></i>
                                Período de Locação Desejado
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="DataInicioLocacao" class="form-label-modern">
                                        <i class="fas fa-calendar-check me-2 text-success"></i>
                                        Data Inicial <span class="required">*</span>
                                    </label>
                                    <input asp-for="DataInicioLocacao" 
                                           class="form-control-modern" 
                                           type="date" 
                                           id="dataInicioInput" />
                                    <span asp-validation-for="DataInicioLocacao" class="text-danger small d-block mt-1"></span>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label asp-for="DataFinalLocacao" class="form-label-modern">
                                        <i class="fas fa-calendar-times me-2 text-danger"></i>
                                        Data Final <span class="required">*</span>
                                    </label>
                                    <input asp-for="DataFinalLocacao" 
                                           class="form-control-modern" 
                                           type="date" 
                                           id="dataFinalInput" />
                                    <span asp-validation-for="DataFinalLocacao" class="text-danger small d-block mt-1"></span>
                                </div>
                            </div>

                            <!-- Resumo do Período -->
                            <div class="period-summary" id="resumoPeriodo" style="display: none;">
                                <div class="period-icon">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <div class="period-content">
                                    <strong>Período Selecionado:</strong>
                                    <div id="resumoTexto"></div>
                                </div>
                            </div>
                        </div>

                        <!-- Verificação Anti-Bot -->
                        <div class="form-group-modern mb-4">
                            <div class="captcha-box">
                                <div class="captcha-content">
                                    <input asp-for="ConfirmarHumano" 
                                           class="captcha-checkbox" 
                                           type="checkbox" 
                                           id="confirmarHumano" />
                                    <label class="captcha-label" for="confirmarHumano">
                                        <i class="fas fa-shield-alt"></i>
                                    </label>
                                    <span class="captcha-text">Não sou um robô</span>
                                    <span class="required ms-1">*</span>
                                </div>
                                <span asp-validation-for="ConfirmarHumano" class="text-danger small d-block mt-2"></span>
                            </div>
                        </div>

                         <!-- Botões -->
                        <div class="button-group mt-4">
                            <button type="submit" class="btn-primary-modern">
                                <i class="fas fa-paper-plane me-2"></i>Enviar Pré-Cadastro
                            </button>
                            <a href="/" class="btn-secondary-modern">
                                <i class="fas fa-arrow-left me-2"></i>Voltar ao Início
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Cards Informativos -->
            <div class="row mt-5">
                <!-- Card: Próximos Passos -->
                <div class="col-md-6 mb-4">
                    <div class="info-card">
                        <div class="info-card-icon">
                            <i class="fas fa-clipboard-check"></i>
                        </div>
                        <h3 class="info-card-title">Próximos Passos</h3>
                        <ol class="info-card-list">
                            <li><strong>Envie o formulário</strong> - Preencha todos os campos obrigatórios</li>
                            <li><strong>Aguarde nosso contato</strong> - Verificaremos seus dados</li>
                            <li><strong>Complete o cadastro</strong> - Finalize e confirme a reserva</li>
                        </ol>
                    </div>
                </div>

                <!-- Card: Por que escolher nossos serviços -->
                <div class="col-md-6 mb-4">
                    <div class="info-card highlight-card">
                        <div class="info-card-icon">
                            <i class="fas fa-star"></i>
                        </div>
                        <h3 class="info-card-title">Por Que Nos Escolher?</h3>
                        <ul class="benefits-list">
                            <li><i class="fas fa-check-circle"></i> Frota moderna e bem conservada</li>
                            <li><i class="fas fa-check-circle"></i> Preços competitivos</li>
                            <li><i class="fas fa-check-circle"></i> Atendimento personalizado</li>
                            <li><i class="fas fa-check-circle"></i> Segurança e confiabilidade</li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Banner de Segurança e LGPD -->
            <div class="security-banner">
                <div class="security-content">
                    <div class="security-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <div class="security-text">
                        <strong>Seus dados estão 100% seguros e protegidos!</strong>
                        <p>
                            Utilizamos criptografia de ponta para proteger todas as suas informações pessoais.
                            <br>
                            <span class="lgpd-badge">
                                <i class="fas fa-check-circle me-1"></i>
                                <strong>Em conformidade com a LGPD</strong> - Lei Geral de Proteção de Dados (Lei nº 13.709/2018)
                            </span>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Máscara de CPF
            $('#cpfInput').on('input', function() {
                let value = this.value.replace(/\D/g, '');
                if (value.length <= 11) {
                    value = value.replace(/(\d{3})(\d)/, '$1.$2');
                    value = value.replace(/(\d{3})(\d)/, '$1.$2');
                    value = value.replace(/(\d{3})(\d{1,2})$/, '$1-$2');
                    this.value = value;
                }
            });

            // Máscara de Telefone
            $('#telefoneInput').on('input', function() {
                let value = this.value.replace(/\D/g, '');
                if (value.length <= 11) {
                    if (value.length <= 10) {
                        value = value.replace(/(\d{2})(\d)/, '($1) $2');
                        value = value.replace(/(\d{4})(\d)/, '$1-$2');
                    } else {
                        value = value.replace(/(\d{2})(\d)/, '($1) $2');
                        value = value.replace(/(\d{5})(\d)/, '$1-$2');
                    }
                    this.value = value;
                }
            });

            // Atualizar nome do arquivo no label
            $('#cnhUploadInput').on('change', function(e) {
                const file = e.target.files[0];
                const fileNameDisplay = $('.file-upload-name');
                
                if (file) {
                    fileNameDisplay.text(file.name);
                    
                    // Validar tamanho (5MB)
                    if (file.size > 5 * 1024 * 1024) {
                        alert('⚠️ O arquivo deve ter no máximo 5MB!');
                        $(this).val('');
                        fileNameDisplay.text('Nenhum arquivo escolhido');
                        $('#imagePreview').hide();
                        return;
                    }

                    // Validar tipo
                    const validTypes = ['image/jpeg', 'image/jpg', 'image/png', 'application/pdf'];
                    if (!validTypes.includes(file.type)) {
                        alert('⚠️ Apenas arquivos JPG, JPEG, PNG ou PDF são permitidos!');
                        $(this).val('');
                        fileNameDisplay.text('Nenhum arquivo escolhido');
                        $('#imagePreview').hide();
                        return;
                    }

                    // Mostrar preview apenas para imagens
                    if (file.type.startsWith('image/')) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            $('#previewImage').attr('src', e.target.result);
                            $('#imagePreview').fadeIn();
                        };
                        reader.readAsDataURL(file);
                    } else {
                        $('#imagePreview').hide();
                    }
                } else {
                    fileNameDisplay.text('Nenhum arquivo escolhido');
                }
            });

            // Configurar datas mínimas e máximas
            const hoje = new Date();
            const amanha = new Date(hoje);
            amanha.setDate(amanha.getDate() + 1);
            
            const dataMinima = amanha.toISOString().split('T')[0];
            const dataMaxima = new Date(hoje);
            dataMaxima.setFullYear(dataMaxima.getFullYear() + 1);
            const dataMaximaStr = dataMaxima.toISOString().split('T')[0];
            
            $('#dataInicioInput').attr('min', dataMinima);
            $('#dataInicioInput').attr('max', dataMaximaStr);
            $('#dataFinalInput').attr('min', dataMinima);
            $('#dataFinalInput').attr('max', dataMaximaStr);

            // Atualizar data final quando data inicial mudar
            $('#dataInicioInput').on('change', function() {
                const dataInicio = new Date(this.value);
                const dataMinFinal = new Date(dataInicio);
                dataMinFinal.setDate(dataMinFinal.getDate() + 1);
                
                $('#dataFinalInput').attr('min', dataMinFinal.toISOString().split('T')[0]);
                
                // Se data final for menor que a nova data mínima, ajustar
                const dataFinal = new Date($('#dataFinalInput').val());
                if (dataFinal <= dataInicio) {
                    dataMinFinal.setDate(dataMinFinal.getDate() + 6); // +7 dias por padrão
                    $('#dataFinalInput').val(dataMinFinal.toISOString().split('T')[0]);
                }
                
                atualizarResumoPeriodo();
            });

            $('#dataFinalInput').on('change', function() {
                atualizarResumoPeriodo();
            });

            // Função para atualizar o resumo do período
            function atualizarResumoPeriodo() {
                const dataInicio = $('#dataInicioInput').val();
                const dataFinal = $('#dataFinalInput').val();
                
                if (dataInicio && dataFinal) {
                    const inicio = new Date(dataInicio);
                    const final = new Date(dataFinal);
                    const dias = Math.ceil((final - inicio) / (1000 * 60 * 60 * 24));
                    
                    if (dias > 0) {
                        const inicioFormatado = inicio.toLocaleDateString('pt-BR');
                        const finalFormatado = final.toLocaleDateString('pt-BR');
                        
                        $('#resumoTexto').html(
                            `<div class="period-days">${dias} dia(s)</div>` +
                            `<div class="period-dates">${inicioFormatado} até ${finalFormatado}</div>`
                        );
                        $('#resumoPeriodo').fadeIn();
                    } else {
                        $('#resumoPeriodo').fadeOut();
                    }
                }
            }

            // Chamar ao carregar a página se houver valores
            atualizarResumoPeriodo();

            // Validação do formulário antes de enviar
            $('#formPreCadastro').on('submit', function(e) {
                let isValid = true;
                let erros = [];

                // Validar nome
                if ($('#Nome').val().trim().length < 3) {
                    erros.push('O nome deve ter pelo menos 3 caracteres');
                    isValid = false;
                }

                // Validar CPF
                const cpf = $('#cpfInput').val().replace(/\D/g, '');
                if (cpf.length !== 11) {
                    erros.push('CPF inválido');
                    isValid = false;
                }

                // Validar telefone
                const telefone = $('#telefoneInput').val().replace(/\D/g, '');
                if (telefone.length < 10 || telefone.length > 11) {
                    erros.push('Telefone inválido');
                    isValid = false;
                }

                // Validar upload CNH
                if (!$('#cnhUploadInput')[0].files[0]) {
                    erros.push('O upload da CNH é obrigatório');
                    isValid = false;
                }

                // Validar datas
                const dataInicio = new Date($('#dataInicioInput').val());
                const dataFinal = new Date($('#dataFinalInput').val());
                
                if (!$('#dataInicioInput').val()) {
                    erros.push('A data inicial da locação é obrigatória');
                    isValid = false;
                }
                
                if (!$('#dataFinalInput').val()) {
                    erros.push('A data final da locação é obrigatória');
                    isValid = false;
                }
                
                if (dataFinal <= dataInicio) {
                    erros.push('A data final deve ser posterior à data inicial');
                    isValid = false;
                }

                // Validar checkbox
                if (!$('#confirmarHumano').is(':checked')) {
                    erros.push('Você deve confirmar que não é um robô');
                    isValid = false;
                }

                if (!isValid) {
                    e.preventDefault();
                    alert('⚠️ Por favor, corrija os seguintes erros:\n\n' + erros.join('\n'));
                    return false;
                }

                // Mostrar loading
                $(this).find('button[type="submit"]')
                    .html('<i class="fas fa-spinner fa-spin me-2"></i>Enviando...')
                    .prop('disabled', true);
            });
        });
    </script>
}


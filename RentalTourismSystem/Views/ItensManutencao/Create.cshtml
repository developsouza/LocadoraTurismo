@model RentalTourismSystem.Models.ItemManutencao

@{
    ViewData["Title"] = "Adicionar Item";
    var manutencao = ViewBag.Manutencao as RentalTourismSystem.Models.ManutencaoVeiculo;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <h2><i class="fas fa-plus"></i> Adicionar Item à Manutenção</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Manutencoes" asp-action="Index">Manutenções</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Manutencoes" asp-action="Details" asp-route-id="@manutencao.Id">Manutenção #@manutencao.Id</a></li>
                    <li class="breadcrumb-item active">Adicionar Item</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Informações da Manutenção -->
    <div class="alert alert-info">
        <strong><i class="fas fa-info-circle"></i> Manutenção:</strong>
        @manutencao.TipoManutencao?.Nome - @manutencao.Veiculo?.Marca @manutencao.Veiculo?.Modelo (@manutencao.Veiculo?.Placa)
    </div>

    <div class="card">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="fas fa-cog"></i> Dados do Item</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <input type="hidden" asp-for="ManutencaoVeiculoId" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <!-- Tipo -->
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Tipo" class="control-label"></label>
                            <select asp-for="Tipo" class="form-control" required>
                                <option value="">Selecione...</option>
                                <option value="Peça">Peça</option>
                                <option value="Serviço">Serviço</option>
                                <option value="Outros">Outros</option>
                            </select>
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Descrição -->
                    <div class="col-md-9">
                        <div class="form-group">
                            <label asp-for="Descricao" class="control-label"></label>
                            <input asp-for="Descricao" class="form-control" required placeholder="Ex: Óleo do motor 5W30" />
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- Quantidade -->
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Quantidade" class="control-label"></label>
                            <input asp-for="Quantidade" type="number" class="form-control" required min="1" value="1" />
                            <span asp-validation-for="Quantidade" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Valor Unitário -->
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="ValorUnitario" class="control-label"></label>
                            <input asp-for="ValorUnitario" type="number" step="0.01" class="form-control" required placeholder="0,00" />
                            <span asp-validation-for="ValorUnitario" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Código/Número da Peça -->
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="CodigoPeca" class="control-label"></label>
                            <input asp-for="CodigoPeca" class="form-control" placeholder="Ex: ABC123" />
                            <span asp-validation-for="CodigoPeca" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Fornecedor -->
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Fornecedor" class="control-label"></label>
                            <input asp-for="Fornecedor" class="form-control" placeholder="Nome do fornecedor" />
                            <span asp-validation-for="Fornecedor" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- Observações -->
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Observacoes" class="control-label"></label>
                            <textarea asp-for="Observacoes" class="form-control" rows="2" placeholder="Observações adicionais (opcional)"></textarea>
                            <span asp-validation-for="Observacoes" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <hr />

                <div class="form-group">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Adicionar Item
                    </button>
                    <a asp-controller="Manutencoes" asp-action="Details" asp-route-id="@manutencao.Id" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Calcular valor total ao alterar quantidade ou valor unitário
            function calcularTotal() {
                var quantidade = parseFloat($('#Quantidade').val()) || 0;
                var valorUnitario = parseFloat($('#ValorUnitario').val()) || 0;
                var total = quantidade * valorUnitario;
                
                if (total > 0) {
                    $('#valorTotal').text('R$ ' + total.toFixed(2).replace('.', ','));
                } else {
                    $('#valorTotal').text('R$ 0,00');
                }
            }

            $('#Quantidade, #ValorUnitario').on('input change', calcularTotal);

            // Adicionar preview do valor total
            $('<div class="alert alert-info mt-3"><strong>Valor Total: </strong><span id="valorTotal">R$ 0,00</span></div>').insertAfter('hr:first');
            
            calcularTotal();
        });
    </script>
}

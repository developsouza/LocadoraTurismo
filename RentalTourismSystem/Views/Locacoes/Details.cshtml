@model RentalTourismSystem.Models.Locacao
@{
    ViewData["Title"] = $"Locação #{Model.Id}";
    var isActive = !Model.DataDevolucaoReal.HasValue;
    var diasAtraso = isActive && DateTime.Now.Date > Model.DataDevolucao.Date ?
        (int)(DateTime.Now.Date - Model.DataDevolucao.Date).TotalDays : 0;
}

<div class="row">
    <div class="col-12">
        <h2 class="text-gradient">
            <i class="fas fa-file-contract me-2"></i>Detalhes da Locação #@Model.Id
        </h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Locações</a></li>
                <li class="breadcrumb-item active">Locação #@Model.Id</li>
            </ol>
        </nav>
    </div>
</div>

<!-- Alertas de Status -->
@if (isActive)
{
    @if (diasAtraso > 0)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>ATENÇÃO!</strong> Esta locação está com <strong>@diasAtraso dia(s)</strong> de atraso na devolução!
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    else
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="fas fa-info-circle me-2"></i>
            Locação ativa. Devolução prevista para <strong>@Model.DataDevolucao.ToString("dd/MM/yyyy 'às' HH:mm")</strong>.
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
}
else
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        Locação finalizada em <strong>@Model.DataDevolucaoReal?.ToString("dd/MM/yyyy 'às' HH:mm")</strong>.
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <!-- Coluna Principal -->
    <div class="col-lg-8">
        <!-- Card Principal -->
        <div class="card hover-lift mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Informações da Locação
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Cliente -->
                    <div class="col-md-6 mb-3">
                        <label class="text-muted small d-block">Cliente:</label>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-user fa-2x text-primary me-3"></i>
                            <div>
                                <h6 class="mb-0">@Model.Cliente.Nome</h6>
                                <small class="text-muted">
                                    @Model.Cliente.CPF<br>
                                    @Model.Cliente.Telefone
                                </small>
                            </div>
                        </div>
                    </div>

                    <!-- Veículo -->
                    <div class="col-md-6 mb-3">
                        <label class="text-muted small d-block">Veículo:</label>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-car fa-2x text-success me-3"></i>
                            <div>
                                <h6 class="mb-0">@Model.Veiculo.Marca @Model.Veiculo.Modelo</h6>
                                <small class="text-muted">
                                    Placa: <code>@Model.Veiculo.Placa</code><br>
                                    @Model.Veiculo.Cor - @Model.Veiculo.Ano
                                </small>
                            </div>
                        </div>
                    </div>

                    <!-- Período -->
                    <div class="col-md-6 mb-3">
                        <label class="text-muted small d-block">Período:</label>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-calendar-alt fa-2x text-info me-3"></i>
                            <div>
                                <strong>Retirada:</strong> @Model.DataRetirada.ToString("dd/MM/yyyy HH:mm")<br>
                                <strong>Devolução:</strong> @Model.DataDevolucao.ToString("dd/MM/yyyy HH:mm")
                                @if (Model.DataDevolucaoReal.HasValue)
                                {
                                    <br>
                                    <strong>Devolvido:</strong>
 
                                    @Model.DataDevolucaoReal?.ToString("dd/MM/yyyy HH:mm")
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Valores -->
                    <div class="col-md-6 mb-3">
                        <label class="text-muted small d-block">Valores:</label>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-dollar-sign fa-2x text-warning me-3"></i>
                            <div>
                                <strong>Total:</strong> <span class="h5 text-success mb-0">R$ @Model.ValorTotal.ToString("N2")</span><br>
                                <small class="text-muted">
                                    Diária: R$ @Model.Veiculo.ValorDiaria.ToString("N2")<br>
                                    Dias: @((Model.DataDevolucao - Model.DataRetirada).Days)
                                </small>
                            </div>
                        </div>
                    </div>

                    <!-- Funcionário e Agência -->
                    <div class="col-12">
                        <hr>
                        <div class="row">
                            <div class="col-md-6">
                                <small class="text-muted">Funcionário Responsável:</small>
                                <p class="mb-0"><strong>@(Model.Funcionario?.Nome ?? "Não informado")</strong></p>
                            </div>
                            <div class="col-md-6">
                                <small class="text-muted">Agência:</small>
                                <p class="mb-0"><strong>@Model.Agencia?.Nome</strong></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Ações da Locação -->
        <div class="card hover-lift mb-4">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0">
                    <i class="fas fa-cogs me-2"></i>Ações
                </h5>
            </div>
            <div class="card-body">
                <div class="d-flex gap-2 flex-wrap">
                    @if (isActive)
                    {
                        <a asp-action="Finalizar" asp-route-id="@Model.Id" class="btn btn-success">
                            <i class="fas fa-check-circle me-2"></i>Finalizar Locação
                        </a>
                    }
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i>Editar
                    </a>
                    @if (!isActive)
                    {
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Excluir
                        </a>
                    }
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Voltar
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Coluna Lateral -->
    <div class="col-lg-4">
        <!-- Card de Documentos -->
        <div class="card hover-lift border-info mb-4 shadow-sm">
            <div class="card-header bg-gradient text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <h5 class="mb-0">
                    <i class="fas fa-file-contract me-2"></i>Documentos da Locação
                </h5>
            </div>
            <div class="card-body">
                <p class="text-muted small mb-3">
                    <i class="fas fa-info-circle me-1"></i>
                    Gere e imprima os documentos oficiais desta locação de forma profissional e automatizada.
                </p>

                <!-- Botão Contrato -->
                <button class="btn btn-outline-primary w-100 mb-3 documento-btn" onclick="abrirContrato(@Model.Id)">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-file-contract fa-2x me-3"></i>
                            <div class="text-start">
                                <strong>Contrato de Locação</strong>
                                <small class="d-block text-muted">Documento oficial completo</small>
                            </div>
                        </div>
                        <i class="fas fa-external-link-alt"></i>
                    </div>
                </button>

                <!-- Botão Laudo de Vistoria -->
                <button class="btn btn-outline-success w-100 mb-3 documento-btn" onclick="abrirLaudo(@Model.Id)">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-clipboard-check fa-2x me-3"></i>
                            <div class="text-start">
                                <strong>Laudo de Vistoria</strong>
                                <small class="d-block text-muted">Checklist completo do veículo</small>
                            </div>
                        </div>
                        <i class="fas fa-external-link-alt"></i>
                    </div>
                </button>

                <!-- Menu Dropdown de Opções -->
                <div class="dropdown">
                    <button class="btn btn-dark w-100 dropdown-toggle" type="button" id="dropdownDocumentos" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-ellipsis-v me-2"></i>Mais Opções
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end w-100 shadow" aria-labelledby="dropdownDocumentos">
                        <li>
                            <h6 class="dropdown-header">
                                <i class="fas fa-file me-2"></i>Documentos Individuais
                            </h6>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#" onclick="abrirContrato(@Model.Id); return false;">
                                <i class="fas fa-file-contract me-2 text-primary"></i>Abrir Contrato
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#" onclick="abrirLaudo(@Model.Id); return false;">
                                <i class="fas fa-clipboard-check me-2 text-success"></i>Abrir Laudo
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <h6 class="dropdown-header">
                                <i class="fas fa-layer-group me-2"></i>Ações em Lote
                            </h6>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#" onclick="abrirTodosDocumentos(@Model.Id); return false;">
                                <i class="fas fa-folder-open me-2 text-info"></i>Abrir Todos
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#" onclick="imprimirTodos(@Model.Id); return false;">
                                <i class="fas fa-print me-2 text-warning"></i>Imprimir Todos
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <h6 class="dropdown-header">
                                <i class="fas fa-tools me-2"></i>Ferramentas
                            </h6>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#" onclick="visualizarPrevia(@Model.Id); return false;">
                                <i class="fas fa-eye me-2 text-secondary"></i>Visualizar Prévia
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item disabled" href="#" onclick="return false;">
                                <i class="fas fa-envelope me-2 text-muted"></i>Enviar por Email (Em breve)
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Informação sobre Documentos -->
                <div class="alert alert-info mt-3 mb-0" role="alert">
                    <div class="d-flex">
                        <i class="fas fa-lightbulb me-2 mt-1"></i>
                        <div>
                            <small>
                                <strong>Dica Profissional:</strong> Os documentos são gerados automaticamente com todos os dados da locação.
                                Use a opção de impressão do navegador (<kbd>Ctrl+P</kbd>) para salvar em PDF.
                            </small>
                        </div>
                    </div>
                </div>

                <!-- Estatísticas de Documentos -->
                <div class="mt-3 p-3 bg-light rounded">
                    <small class="text-muted d-block mb-2">
                        <i class="fas fa-chart-line me-1"></i>Estatísticas desta Locação
                    </small>
                    <div class="d-flex justify-content-between small">
                        <span><i class="fas fa-calendar me-1"></i>Criada em:</span>
                        <strong>@Model.DataRetirada.ToString("dd/MM/yyyy")</strong>
                    </div>
                    <div class="d-flex justify-content-between small mt-1">
                        <span><i class="fas fa-clock me-1"></i>Status:</span>
                        <strong class="@(isActive ? "text-info" : "text-success")">
                            @(isActive ? "Ativa" : "Finalizada")
                        </strong>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card de Informações Adicionais -->
        <div class="card hover-lift mb-4">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Informações Adicionais
                </h5>
            </div>
            <div class="card-body">
                <div class="info-item mb-3">
                    <small class="text-muted d-block">Status do Veículo:</small>
                    <span class="badge bg-@(Model.Veiculo.StatusCarro.Status == "Disponível" ? "success" : "warning")">
                        @Model.Veiculo.StatusCarro.Status
                    </span>
                </div>

                @if (Model.Observacoes != null)
                {
                    <div class="info-item">
                        <small class="text-muted d-block">Observações:</small>
                        <p class="small">@Model.Observacoes</p>
                    </div>
                }

                <hr>

                <div class="d-grid gap-2">
                    <a asp-controller="Clientes" asp-action="Details" asp-route-id="@Model.ClienteId"
                       class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-user me-2"></i>Ver Perfil do Cliente
                    </a>
                    <a asp-controller="Veiculos" asp-action="Details" asp-route-id="@Model.VeiculoId"
                       class="btn btn-sm btn-outline-success">
                        <i class="fas fa-car me-2"></i>Ver Detalhes do Veículo
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // ========================================
        // FUNÇÕES DE DOCUMENTOS
        // ========================================

        // Abrir contrato em nova janela
        function abrirContrato(locacaoId) {
            const url = '@Url.Action("ContratoLocacao", "Documentos")/' + locacaoId;
            const width = 900;
            const height = 800;
            const left = (screen.width - width) / 2;
            const top = (screen.height - height) / 2;

            window.open(
                url,
                'ContratoLocacao',
                `width=${width},height=${height},left=${left},top=${top},scrollbars=yes,resizable=yes`
            );

            // Analytics (opcional)
            registrarAcaoDocumento(locacaoId, 'contrato_aberto');
        }

        // Abrir laudo de vistoria em nova janela
        function abrirLaudo(locacaoId) {
            const url = '@Url.Action("LaudoVistoria", "Documentos")/' + locacaoId;
            const width = 900;
            const height = 800;
            const left = (screen.width - width) / 2;
            const top = (screen.height - height) / 2;

            window.open(
                url,
                'LaudoVistoria',
                `width=${width},height=${height},left=${left},top=${top},scrollbars=yes,resizable=yes`
            );

            // Analytics (opcional)
            registrarAcaoDocumento(locacaoId, 'laudo_aberto');
        }

        // Abrir todos os documentos
        function abrirTodosDocumentos(locacaoId) {
            // Mostrar loading
            showNotification('Abrindo documentos...', 'info');

            // Abrir contrato
            abrirContrato(locacaoId);

            // Aguardar 800ms e abrir laudo
            setTimeout(() => {
                abrirLaudo(locacaoId);
                showNotification('Documentos abertos com sucesso!', 'success');
            }, 800);
        }

        // Imprimir todos os documentos
        function imprimirTodos(locacaoId) {
            showNotification('Preparando documentos para impressão...', 'info');

            // Abrir e imprimir contrato
            const contratoWindow = window.open(
                '@Url.Action("ContratoLocacao", "Documentos")/' + locacaoId,
                'ContratoImpressao'
            );

            if (contratoWindow) {
                contratoWindow.onload = function() {
                    setTimeout(() => {
                        contratoWindow.print();
                    }, 1500);
                };
            }

            // Aguardar e abrir laudo
            setTimeout(() => {
                const laudoWindow = window.open(
                    '@Url.Action("LaudoVistoria", "Documentos")/' + locacaoId,
                    'LaudoImpressao'
                );

                if (laudoWindow) {
                    laudoWindow.onload = function() {
                        setTimeout(() => {
                            laudoWindow.print();
                        }, 1500);
                    };
                }

                showNotification('Documentos enviados para impressão!', 'success');
            }, 2500);
        }

        // Visualizar prévia dos documentos
        function visualizarPrevia(locacaoId) {
            showNotification('Gerando prévia...', 'info');

            // Abrir em modal ou nova aba com zoom reduzido
            const url = '@Url.Action("ContratoLocacao", "Documentos")/' + locacaoId;
            window.open(url, '_blank');
        }

        // Registrar ação (opcional - para analytics)
        function registrarAcaoDocumento(locacaoId, acao) {
            // Implementar chamada AJAX para registrar no banco se necessário
            console.log(`Ação: ${acao} - Locação: ${locacaoId}`);
        }

        // Sistema de notificações
        function showNotification(message, type = 'info') {
            const toast = `
                <div class="toast align-items-center text-white bg-${type} border-0 position-fixed bottom-0 end-0 m-3"
                     role="alert" aria-live="assertive" aria-atomic="true" style="z-index: 9999;">
                    <div class="d-flex">
                        <div class="toast-body">
                            <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'} me-2"></i>
                            ${message}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto"
                                data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>
            `;

            const toastElement = $(toast).appendTo('body');
            const bsToast = new bootstrap.Toast(toastElement[0], { delay: 3000 });
            bsToast.show();

            // Remover após esconder
            toastElement.on('hidden.bs.toast', function() {
                $(this).remove();
            });
        }

        // ========================================
        // EFEITOS VISUAIS
        // ========================================

        $(document).ready(function() {
            // Adicionar efeito hover nos botões de documentos
            $('.documento-btn').hover(
                function() {
                    $(this).find('.fa-external-link-alt').addClass('fa-bounce');
                },
                function() {
                    $(this).find('.fa-external-link-alt').removeClass('fa-bounce');
                }
            );

            // Inicializar tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();

            // Animação de entrada dos cards
            $('.card').each(function(index) {
                $(this).css({
                    'opacity': '0',
                    'transform': 'translateY(20px)'
                });

                setTimeout(() => {
                    $(this).animate({
                        opacity: 1
                    }, 500).css({
                        'transform': 'translateY(0)',
                        'transition': 'transform 0.5s ease'
                    });
                }, index * 100);
            });
        });

        // Atalhos de teclado
        document.addEventListener('keydown', function(e) {
            // Ctrl + C = Abrir Contrato
            if (e.ctrlKey && e.key === 'c' && !e.shiftKey) {
                e.preventDefault();
                abrirContrato(@Model.Id);
            }

            // Ctrl + L = Abrir Laudo
            if (e.ctrlKey && e.key === 'l') {
                e.preventDefault();
                abrirLaudo(@Model.Id);
            }

            // Ctrl + Shift + P = Imprimir Todos
            if (e.ctrlKey && e.shiftKey && e.key === 'P') {
                e.preventDefault();
                imprimirTodos(@Model.Id);
            }
        });

        // Log de atalhos no console
        console.log('%c🔑 Atalhos de Teclado Disponíveis:', 'font-weight: bold; font-size: 14px;');
        console.log('%cCtrl + C: Abrir Contrato', 'color: blue;');
        console.log('%cCtrl + L: Abrir Laudo', 'color: green;');
        console.log('%cCtrl + Shift + P: Imprimir Todos', 'color: orange;');
    </script>

    <style>
        /* Animações personalizadas */
        .fa-bounce {
            animation: bounce 0.5s ease infinite;
        }

        @@keyframes bounce {
            0%, 100% {
                transform: translateX(0);
            }

            50% {
                transform: translateX(5px);
            }
        }

        .hover-lift {
            transition: all 0.3s ease;
        }

            .hover-lift:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 25px rgba(0,0,0,0.15) !important;
            }

        .documento-btn {
            transition: all 0.3s ease;
            border-width: 2px;
        }

            .documento-btn:hover {
                transform: scale(1.02);
                box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            }

        .dropdown-item {
            transition: all 0.2s ease;
        }

            .dropdown-item:hover {
                transform: translateX(5px);
                padding-left: 1.5rem;
            }

        .bg-gradient {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }

        kbd {
            background-color: #f7f7f7;
            border: 1px solid #ccc;
            border-radius: 3px;
            box-shadow: 0 1px 0 rgba(0,0,0,0.2);
            color: #333;
            display: inline-block;
            font-family: monospace;
            font-size: 0.85em;
            line-height: 1;
            padding: 2px 4px;
            white-space: nowrap;
        }
    </style>
}
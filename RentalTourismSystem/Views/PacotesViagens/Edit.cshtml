@model RentalTourismSystem.Models.PacoteViagem
@{
    ViewData["Title"] = "Editar Pacote";
}

<div class="row">
    <div class="col-12">
        <h2>
            <i class="fas fa-edit me-2"></i>Editar Pacote de Viagem
        </h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Pacotes</a></li>
                <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">@Model.Nome</a></li>
                <li class="breadcrumb-item active">Editar</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Atualizar Informações do Pacote</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="DataCriacao" />

                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label">Nome do Pacote *</label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descricao" class="form-label">Descrição *</label>
                        <textarea asp-for="Descricao" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label asp-for="Destino" class="form-label">Destino *</label>
                            <input asp-for="Destino" class="form-control" />
                            <span asp-validation-for="Destino" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="Ativo" class="form-check-input" type="checkbox" />
                                <label asp-for="Ativo" class="form-check-label">Pacote Ativo</label>
                            </div>
                            <small class="form-text text-muted">Desmarque para desativar o pacote</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Duracao" class="form-label">Duração *</label>
                            <input asp-for="Duracao" class="form-control" type="number" min="1" />
                            <span asp-validation-for="Duracao" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="UnidadeTempo" class="form-label">Unidade de Tempo *</label>
                            <select asp-for="UnidadeTempo" class="form-select">
                                <option value="horas">Horas</option>
                                <option value="dias">Dias</option>
                            </select>
                            <span asp-validation-for="UnidadeTempo" class="text-danger"></span>
                            <div id="durationPreview" class="mt-2 p-2 bg-light rounded">
                                <small><i class="fas fa-clock me-1"></i>Duração atual: <strong>@Model.DuracaoFormatada</strong></small>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Preco" class="form-label">Preço por Pessoa *</label>
                        <div class="input-group">
                            <span class="input-group-text">R$</span>
                            <input asp-for="Preco" class="form-control" type="number" step="0.01" min="0" />
                        </div>
                        <span asp-validation-for="Preco" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-1"></i>Salvar Alterações
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Voltar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0">
                    <i class="fas fa-chart-bar me-1"></i>Estatísticas do Pacote
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <small class="text-muted">Total de Reservas:</small><br>
                    <strong class="fs-4">@Model.ReservasViagens.Count</strong>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Total de Pessoas:</small><br>
                    <strong class="fs-4">@Model.ReservasViagens.Sum(r => r.Quantidade)</strong>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Receita Gerada:</small><br>
                    <strong class="text-success fs-4">@Model.ReceitaTotal.ToString("C")</strong>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Última Reserva:</small><br>
                    <strong>
                        @if (Model.UltimaReserva.HasValue)
                        {
                            @Model.UltimaReserva.Value.ToString("dd/MM/yyyy")
                        }
                        else
                        {
                            <span class="text-muted">Nenhuma reserva</span>
                        }
                    </strong>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Status:</small><br>
                    @if (Model.Ativo)
                    {
                        <span class="badge bg-success fs-6">Ativo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary fs-6">Inativo</span>
                    }
                </div>

                @if (Model.ReservasViagens.Any(r => r.StatusReservaViagem.Status == "Pendente" || r.StatusReservaViagem.Status == "Confirmada"))
                {
                    <div class="alert alert-warning">
                        <small>
                            <i class="fas fa-exclamation-triangle me-1"></i>
                            Este pacote possui reservas ativas. Alterações podem afetar reservas existentes.
                        </small>
                    </div>
                }
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header bg-success text-white">
                <h6 class="mb-0">
                    <i class="fas fa-lightbulb me-1"></i>Dicas de Edição
                </h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled small">
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-1"></i>
                        Mantenha descrições atualizadas
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-1"></i>
                        Ajuste preços conforme sazonalidade
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-1"></i>
                        Use "horas" para passeios rápidos
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-1"></i>
                        Use "dias" para pacotes completos
                    </li>
                    <li class="mb-2">
                        <i class="fas fa-check text-success me-1"></i>
                        Considere feedback dos clientes
                    </li>
                    <li class="mb-0">
                        <i class="fas fa-check text-success me-1"></i>
                        Desative em vez de excluir se houver reservas
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Preview da duração em tempo real
        document.getElementById('Duracao').addEventListener('input', updateDurationPreview);
        document.getElementById('UnidadeTempo').addEventListener('change', updateDurationPreview);

        function updateDurationPreview() {
            const duracao = document.getElementById('Duracao').value;
            const unidade = document.getElementById('UnidadeTempo').value;

            const preview = document.getElementById('durationPreview');
            if (duracao && unidade && preview) {
                preview.innerHTML =
                    `<small><i class="fas fa-clock me-1"></i>Nova duração: <strong>${duracao} ${unidade}</strong></small>`;
            }
        }

        // Alerta ao desativar pacote com reservas ativas
        document.getElementById('Ativo').addEventListener('change', function() {
            const hasActiveReservations = @Html.Raw(Model.ReservasViagens.Any(r => r.StatusReservaViagem.Status == "Pendente" || r.StatusReservaViagem.Status == "Confirmada").ToString().ToLower());

            if (!this.checked && hasActiveReservations) {
                const confirm = window.confirm(
                    'Atenção! Este pacote possui reservas ativas.\n\n' +
                    'Desativar o pacote pode afetar reservas existentes.\n\n' +
                    'Deseja continuar?'
                );

                if (!confirm) {
                    this.checked = true;
                }
            }
        });
    </script>
}
@model IEnumerable<RentalTourismSystem.Models.PacoteViagem>
@{
    ViewData["Title"] = "Pacotes de Viagem";
}

<div class="row mb-4">
    <div class="col-12">
        <h2>
            <i class="fas fa-suitcase me-2"></i>Pacotes de Viagem
        </h2>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-8">
        <form method="get" class="d-flex">
            <input type="text" name="busca" value="@ViewBag.Busca" class="form-control me-2"
                   placeholder="Buscar por nome, destino ou descrição...">
            <button type="submit" class="btn btn-outline-primary">
                <i class="fas fa-search"></i>
            </button>
            @if (!string.IsNullOrEmpty(ViewBag.Busca as string))
            {
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary ms-2" title="Limpar filtros">
                    <i class="fas fa-times"></i>
                </a>
            }
        </form>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Novo Pacote
        </a>
    </div>
</div>

<!-- Estatísticas rápidas -->
@if (Model.Any())
{
    var pacotesAtivos = Model.Count(p => p.Ativo);
    var totalReservas = Model.Sum(p => p.TotalReservas);
    var receitaTotal = Model.Sum(p => p.ReceitaTotal);

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h4>@Model.Count()</h4>
                    <small>Total de Pacotes</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h4>@pacotesAtivos</h4>
                    <small>Pacotes Ativos</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h4>@totalReservas</h4>
                    <small>Total de Reservas</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <h4>@receitaTotal.ToString("C0")</h4>
                    <small>Receita Total</small>
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 @(item.Ativo ? "" : "bg-light opacity-75")">
                <div class="card-header @(item.Ativo ? "bg-success" : "bg-secondary") text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-map-marker-alt me-2"></i>@item.Nome
                        </h5>
                        @if (!item.Ativo)
                        {
                            <small class="badge bg-light text-dark">Inativo</small>
                        }
                    </div>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text">@item.Descricao</p>
                    <div class="mt-auto">
                        <div class="row mb-2">
                            <div class="col-6">
                                <small class="text-muted">Destino:</small><br>
                                <strong>@item.Destino</strong>
                            </div>
                            <div class="col-6">
                                <small class="text-muted">Duração:</small><br>
                                <strong class="text-info">
                                    @item.DuracaoFormatada
                                    @if (item.UnidadeTempo == "horas")
                                    {
                                        <i class="fas fa-clock ms-1" title="Passeio de algumas horas"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-calendar-alt ms-1" title="Pacote de vários dias"></i>
                                    }
                                </strong>
                            </div>
                        </div>

                        <!-- Estatísticas do pacote -->
                        @if (item.TotalReservas > 0)
                        {
                            <div class="row mb-2 small text-muted">
                                <div class="col-6">
                                    <i class="fas fa-users me-1"></i>@item.TotalReservas reserva(s)
                                </div>
                                <div class="col-6">
                                    <i class="fas fa-chart-line me-1"></i>@item.ReceitaTotal.ToString("C0")
                                </div>
                            </div>
                        }

                        <div class="text-center mb-3">
                            <h4 class="text-success mb-0">@item.Preco.ToString("C")</h4>
                            <small class="text-muted">por pessoa</small>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex gap-1">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary flex-fill">
                            <i class="fas fa-eye me-1"></i>Detalhes
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                            <i class="fas fa-edit"></i>
                        </a>
                        @if (item.TotalReservas == 0)
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-outline-danger disabled" title="Não é possível excluir: possui reservas">
                                <i class="fas fa-trash"></i>
                            </button>
                        }
                    </div>

                    <!-- Ação rápida de criar reserva -->
                    @if (item.Ativo)
                    {
                        <div class="mt-2">
                            <a asp-controller="ReservasViagens" asp-action="Create" asp-route-pacoteId="@item.Id"
                               class="btn btn-sm btn-success w-100">
                                <i class="fas fa-calendar-plus me-1"></i>Nova Reserva
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center text-muted py-5">
        <i class="fas fa-suitcase fa-4x mb-3"></i>

        @if (!string.IsNullOrEmpty(ViewBag.Busca as string))
        {
            <h4>Nenhum pacote encontrado</h4>
            <p>Não encontramos pacotes com o termo "<strong>@ViewBag.Busca</strong>".</p>
            <a href="@Url.Action("Index")" class="btn btn-secondary me-2">
                <i class="fas fa-list me-1"></i>Ver Todos os Pacotes
            </a>
        }
        else
        {
            <h4>Nenhum pacote cadastrado</h4>
            <p>Comece criando seu primeiro pacote de viagem!</p>
        }

        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>@(Model.Any() ? "Criar Novo Pacote" : "Criar Primeiro Pacote")
        </a>
    </div>
}
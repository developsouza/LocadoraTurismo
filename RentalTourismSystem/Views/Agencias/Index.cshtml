@model IEnumerable<RentalTourismSystem.Models.Agencia>
@{
    ViewData["Title"] = "Agências";
}

<div class="row mb-4">
    <div class="col-12">
        <h2>
            <i class="fas fa-building me-2"></i>Agências
        </h2>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-8">
        <p class="text-muted">Gerencie as agências da empresa</p>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Nova Agência
        </a>
    </div>
</div>

<div class="row">
    @foreach (var agencia in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-building me-2"></i>@agencia.Nome
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted">Endereço:</small><br>
                        <span>@agencia.Endereco</span>
                    </div>
                    <div class="row mb-3">
                        <div class="col-6">
                            <small class="text-muted">Telefone:</small><br>
                            <span>@agencia.Telefone</span>
                        </div>
                        <div class="col-6">
                            <small class="text-muted">Email:</small><br>
                            <span>@agencia.Email</span>
                        </div>
                    </div>
                    <div class="row text-center">
                        <div class="col-4">
                            <div class="border rounded p-2">
                                <h5 class="text-primary mb-0">@agencia.Funcionarios.Count</h5>
                                <small class="text-muted">Funcionários</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="border rounded p-2">
                                <h5 class="text-success mb-0">@agencia.Veiculos.Count</h5>
                                <small class="text-muted">Veículos</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="border rounded p-2">
                                <h5 class="text-info mb-0">@agencia.Locacoes.Count</h5>
                                <small class="text-muted">Locações</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex gap-1">
                        <a asp-action="Details" asp-route-id="@agencia.Id" class="btn btn-sm btn-outline-primary flex-fill">
                            <i class="fas fa-eye me-1"></i>Detalhes
                        </a>
                        <a asp-action="Edit" asp-route-id="@agencia.Id" class="btn btn-sm btn-outline-warning">
                            <i class="fas fa-edit"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center text-muted py-5">
        <i class="fas fa-building fa-4x mb-3"></i>
        <h4>Nenhuma agência cadastrada</h4>
        <p>Comece criando sua primeira agência!</p>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Criar Primeira Agência
        </a>
    </div>
}
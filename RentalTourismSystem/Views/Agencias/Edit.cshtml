@model RentalTourismSystem.Models.Agencia
@{
    ViewData["Title"] = "Editar Agência";
}

<div class="row">
    <div class="col-12">
        <h2>
            <i class="fas fa-building me-2"></i>Editar Agência
        </h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Agências</a></li>
                <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">@Model.Nome</a></li>
                <li class="breadcrumb-item active">Editar</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Atualizar Dados da Agência</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label">Nome da Agência *</label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Endereco" class="form-label">Endereço Completo *</label>
                        <input asp-for="Endereco" class="form-control" />
                        <span asp-validation-for="Endereco" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Telefone" class="form-label">Telefone *</label>
                            <input asp-for="Telefone" class="form-control" id="telefoneInput" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label">E-mail *</label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-1"></i>Salvar Alterações
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Voltar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0">
                    <i class="fas fa-chart-bar me-1"></i>Estatísticas da Agência
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <small class="text-muted">Funcionários:</small><br>
                    <strong>@Model.Funcionarios.Count</strong>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Veículos:</small><br>
                    <strong>@Model.Veiculos.Count</strong>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Locações Realizadas:</small><br>
                    <strong>@Model.Locacoes.Count</strong>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Receita Total:</small><br>
                    <strong class="text-success">@Model.Locacoes.Sum(l => l.ValorTotal).ToString("C")</strong>
                </div>

                @if (Model.Funcionarios.Any() || Model.Veiculos.Any())
                {
                    <div class="alert alert-warning">
                        <small>
                            <i class="fas fa-exclamation-triangle me-1"></i>
                            Esta agência possui funcionários e/ou veículos vinculados.
                        </small>
                    </div>
                }
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header bg-success text-white">
                <h6 class="mb-0">
                    <i class="fas fa-tools me-1"></i>Ações Rápidas
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Funcionarios" asp-action="Create" asp-route-agenciaId="@Model.Id" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-user-plus me-1"></i>Adicionar Funcionário
                    </a>
                    <a asp-controller="Veiculos" asp-action="Create" asp-route-agenciaId="@Model.Id" class="btn btn-outline-success btn-sm">
                        <i class="fas fa-car me-1"></i>Adicionar Veículo
                    </a>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info btn-sm">
                        <i class="fas fa-eye me-1"></i>Ver Detalhes Completos
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@model RentalTourismSystem.Models.Agencia
@{
    ViewData["Title"] = "Editar Agência";
    var isEdit = true;
}

<div class="row">
    <div class="col-12">
        <h2>
            <i class="fas fa-building me-2"></i>Editar Agência
        </h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Agências</a></li>
                <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">@Model.Nome</a></li>
                <li class="breadcrumb-item active">Editar</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card hover-lift">
            <div class="card-header @(isEdit ? "bg-warning" : "bg-primary") text-white">
                <h5 class="mb-0">
                    <i class="fas fa-building me-2"></i>Dados da Agência
                </h5>
            </div>
            <div class="card-body">
                <form asp-action="@(isEdit ? "Edit" : "Create")">
                    @if (isEdit)
                    {
                        <input type="hidden" asp-for="Id" />
                    }
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <!-- Informações Básicas -->
                    <h6 class="text-primary border-bottom pb-2 mb-3">
                        <i class="fas fa-info-circle me-2"></i>Informações Básicas
                    </h6>

                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label asp-for="Nome" class="form-label required"></label>
                            <input asp-for="Nome" class="form-control" placeholder="Nome da agência" />
                            <span asp-validation-for="Nome" class="invalid-feedback"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="CNPJ" class="form-label"></label>
                            <input asp-for="CNPJ" class="form-control cnpj-mask" placeholder="00.000.000/0001-00" />
                            <span asp-validation-for="CNPJ" class="invalid-feedback"></span>
                        </div>
                    </div>

                    <!-- Contato -->
                    <h6 class="text-primary border-bottom pb-2 mb-3 mt-4">
                        <i class="fas fa-phone me-2"></i>Contato
                    </h6>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Telefone" class="form-label required"></label>
                            <input asp-for="Telefone" class="form-control telefone-mask" placeholder="(00) 0000-0000" />
                            <span asp-validation-for="Telefone" class="invalid-feedback"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label required"></label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="contato@agencia.com" />
                            <span asp-validation-for="Email" class="invalid-feedback"></span>
                        </div>
                    </div>

                    <!-- Localização -->
                    <h6 class="text-primary border-bottom pb-2 mb-3 mt-4">
                        <i class="fas fa-map-marker-alt me-2"></i>Localização
                    </h6>

                    <div class="row">
                        <div class="col-md-5 mb-3">
                            <label asp-for="Cidade" class="form-label"></label>
                            <input asp-for="Cidade" class="form-control" placeholder="Ex: João Pessoa - PB" />
                            <span asp-validation-for="Cidade" class="invalid-feedback"></span>
                        </div>

                        <div class="col-md-7 mb-3">
                            <label asp-for="Endereco" class="form-label required"></label>
                            <input asp-for="Endereco" class="form-control" placeholder="Rua, número, bairro" />
                            <span asp-validation-for="Endereco" class="invalid-feedback"></span>
                        </div>
                    </div>

                    <!-- Botões -->
                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn @(isEdit ? "btn-warning" : "btn-primary")">
                            <i class="fas fa-save me-2"></i>@(isEdit ? "Salvar Alterações" : "Salvar")
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Voltar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Coluna Lateral -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0"><i class="fas fa-question-circle me-2"></i>Ajuda</h6>
            </div>
            <div class="card-body">
                <p class="small"><strong>Campos obrigatórios:</strong></p>
                <ul class="small">
                    <li>Nome da agência</li>
                    <li>Telefone</li>
                    <li>Email</li>
                    <li>Endereço</li>
                </ul>
                <hr>
                <p class="small"><strong>Campos opcionais:</strong></p>
                <ul class="small">
                    <li>CNPJ (recomendado para contratos)</li>
                    <li>Cidade (usado nos documentos)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0">
                    <i class="fas fa-chart-bar me-1"></i>Estatísticas da Agência
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <small class="text-muted">Funcionários:</small><br>
                    <strong>@Model.Funcionarios.Count</strong>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Veículos:</small><br>
                    <strong>@Model.Veiculos.Count</strong>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Locações Realizadas:</small><br>
                    <strong>@Model.Locacoes.Count</strong>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Receita Total:</small><br>
                    <strong class="text-success">@Model.Locacoes.Sum(l => l.ValorTotal).ToString("C")</strong>
                </div>

                @if (Model.Funcionarios.Any() || Model.Veiculos.Any())
                {
                    <div class="alert alert-warning">
                        <small>
                            <i class="fas fa-exclamation-triangle me-1"></i>
                            Esta agência possui funcionários e/ou veículos vinculados.
                        </small>
                    </div>
                }
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header bg-success text-white">
                <h6 class="mb-0">
                    <i class="fas fa-tools me-1"></i>Ações Rápidas
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Funcionarios" asp-action="Create" asp-route-agenciaId="@Model.Id" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-user-plus me-1"></i>Adicionar Funcionário
                    </a>
                    <a asp-controller="Veiculos" asp-action="Create" asp-route-agenciaId="@Model.Id" class="btn btn-outline-success btn-sm">
                        <i class="fas fa-car me-1"></i>Adicionar Veículo
                    </a>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info btn-sm">
                        <i class="fas fa-eye me-1"></i>Ver Detalhes Completos
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.cnpj-mask').mask('00.000.000/0000-00');
            $('.telefone-mask').mask('(00) 0000-0000');
        });
    </script>
}
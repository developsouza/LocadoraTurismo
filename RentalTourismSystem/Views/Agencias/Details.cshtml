@model RentalTourismSystem.Models.Agencia
@{
    ViewData["Title"] = "Detalhes da Agência";
}

<div class="row mb-4">
    <div class="col-12">
        <h2>
            <i class="fas fa-building me-2"></i>@Model.Nome
        </h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Agências</a></li>
                <li class="breadcrumb-item active">@Model.Nome</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Informações da Agência
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <small class="text-muted">Nome:</small><br>
                    <h5 class="text-primary">@Model.Nome</h5>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Endereço:</small><br>
                    <strong>@Model.Endereco</strong>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Telefone:</small><br>
                    <strong>@Model.Telefone</strong>
                </div>
                <div class="mb-3">
                    <small class="text-muted">E-mail:</small><br>
                    <strong>@Model.Email</strong>
                </div>
            </div>
            <div class="card-footer">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                    <i class="fas fa-edit me-1"></i>Editar
                </a>
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="fas fa-arrow-left me-1"></i>Voltar
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <!-- Estatísticas da agência -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center">
                        <h4>@Model.Funcionarios.Count</h4>
                        <small>Funcionários</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h4>@Model.Veiculos.Count</h4>
                        <small>Veículos</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body text-center">
                        <h4>@Model.Locacoes.Count</h4>
                        <small>Locações</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body text-center">
                        <h4>@Model.Locacoes.Sum(l => l.ValorTotal).ToString("C")</h4>
                        <small>Receita Total</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Performance da agência -->
        @if (Model.Veiculos.Any())
        {
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0">
                        <i class="fas fa-chart-bar me-1"></i>Performance dos Veículos
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <small class="text-muted">Veículos Disponíveis:</small><br>
                            <strong>@Model.Veiculos.Count(v => v.StatusCarro.Status == "Disponível")</strong>
                        </div>
                        <div class="col-md-6">
                            <small class="text-muted">Veículos Alugados:</small><br>
                            <strong>@Model.Veiculos.Count(v => v.StatusCarro.Status == "Alugado")</strong>
                        </div>
                    </div>
                    <div class="progress mt-2">
                        @{
                            var totalVeiculos = Model.Veiculos.Count;
                            var veiculosAlugados = Model.Veiculos.Count(v => v.StatusCarro.Status == "Alugado");
                            var percentualUso = totalVeiculos > 0 ? (double)veiculosAlugados / totalVeiculos * 100 : 0;
                        }
                        <div class="progress-bar bg-success" style="width: @percentualUso%">
                            @percentualUso.ToString("F0")% em uso
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Lista de Funcionários -->
        @if (Model.Funcionarios.Any())
        {
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-users me-2"></i>Funcionários
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>Cargo</th>
                                    <th>Email</th>
                                    <th>Locações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var funcionario in Model.Funcionarios)
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="Funcionarios" asp-action="Details" asp-route-id="@funcionario.Id">
                                                @funcionario.Nome
                                            </a>
                                        </td>
                                        <td><span class="badge bg-secondary">@funcionario.Cargo</span></td>
                                        <td>@funcionario.Email</td>
                                        <td>@funcionario.Locacoes.Count</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="text-end">
                        <a asp-controller="Funcionarios" asp-action="Create" asp-route-agenciaId="@Model.Id" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-plus me-1"></i>Adicionar Funcionário
                        </a>
                    </div>
                </div>
            </div>
        }

        <!-- Lista de Veículos -->
        @if (Model.Veiculos.Any())
        {
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-car me-2"></i>Veículos
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Veículo</th>
                                    <th>Placa</th>
                                    <th>Status</th>
                                    <th>Valor Diária</th>
                                    <th>Locações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var veiculo in Model.Veiculos)
                                {
                                    <tr>
                                        <td>
                                            <a asp-controller="Veiculos" asp-action="Details" asp-route-id="@veiculo.Id">
                                                @veiculo.Marca @veiculo.Modelo
                                            </a>
                                        </td>
                                        <td><code>@veiculo.Placa</code></td>
                                        <td>
                                            @{
                                                string badgeClass = veiculo.StatusCarro.Status switch
                                                {
                                                    "Disponível" => "bg-success",
                                                    "Alugado" => "bg-warning",
                                                    "Manutenção" => "bg-danger",
                                                    _ => "bg-secondary"
                                                };
                                            }
                                            <span class="badge @badgeClass">@veiculo.StatusCarro.Status</span>
                                        </td>
                                        <td>@veiculo.ValorDiaria.ToString("C")</td>
                                        <td>@veiculo.Locacoes.Count</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="text-end">
                        <a asp-controller="Veiculos" asp-action="Create" asp-route-agenciaId="@Model.Id" class="btn btn-outline-success btn-sm">
                            <i class="fas fa-plus me-1"></i>Adicionar Veículo
                        </a>
                    </div>
                </div>
            </div>
        }

        @if (!Model.Funcionarios.Any() && !Model.Veiculos.Any())
        {
            <div class="card">
                <div class="card-body text-center text-muted py-5">
                    <i class="fas fa-building fa-4x mb-3"></i>
                    <h5>Agência sem recursos</h5>
                    <p>Esta agência ainda não possui funcionários ou veículos cadastrados.</p>
                    <div class="d-flex gap-2 justify-content-center">
                        <a asp-controller="Funcionarios" asp-action="Create" asp-route-agenciaId="@Model.Id" class="btn btn-primary">
                            <i class="fas fa-user-plus me-1"></i>Adicionar Funcionário
                        </a>
                        <a asp-controller="Veiculos" asp-action="Create" asp-route-agenciaId="@Model.Id" class="btn btn-success">
                            <i class="fas fa-car me-1"></i>Adicionar Veículo
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@model RentalTourismSystem.Models.Funcionario
@{
    ViewData["Title"] = "Editar Funcionário";
}

<div class="row">
    <div class="col-12">
        <h2>
            <i class="fas fa-user-edit me-2"></i>Editar Funcionário
        </h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Funcionários</a></li>
                <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">@Model.Nome</a></li>
                <li class="breadcrumb-item active">Editar</li>
            </ol>
        </nav>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Atualizar Dados do Funcionário</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label asp-for="Nome" class="form-label">Nome Completo *</label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Cpf" class="form-label">CPF *</label>
                            <input asp-for="Cpf" class="form-control" readonly />
                            <small class="text-muted">CPF não pode ser alterado</small>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label">E-mail *</label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Telefone" class="form-label">Telefone *</label>
                            <input asp-for="Telefone" class="form-control" id="telefoneInput" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Cargo" class="form-label">Cargo *</label>
                            <select asp-for="Cargo" class="form-select">
                                <option value="Gerente">Gerente</option>
                                <option value="Atendente">Atendente</option>
                                <option value="Vendedor">Vendedor</option>
                                <option value="Mecânico">Mecânico</option>
                                <option value="Guia Turístico">Guia Turístico</option>
                                <option value="Auxiliar Administrativo">Auxiliar Administrativo</option>
                                <option value="Supervisor">Supervisor</option>
                                <option value="Coordenador">Coordenador</option>
                            </select>
                            <span asp-validation-for="Cargo" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Salario" class="form-label">Salário *</label>
                            <div class="input-group">
                                <span class="input-group-text">R$</span>
                                <input asp-for="Salario" class="form-control" type="number" step="0.01" min="0" />
                            </div>
                            <span asp-validation-for="Salario" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="DataAdmissao" class="form-label">Data de Admissão *</label>
                            <input asp-for="DataAdmissao" class="form-control" type="date" />
                            <span asp-validation-for="DataAdmissao" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AgenciaId" class="form-label">Agência *</label>
                        <select asp-for="AgenciaId" class="form-select" asp-items="ViewBag.AgenciaId">
                        </select>
                        <span asp-validation-for="AgenciaId" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="fas fa-save me-1"></i>Salvar Alterações
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Voltar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h6 class="mb-0">
                    <i class="fas fa-chart-bar me-1"></i>Performance do Funcionário
                </h6>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <small class="text-muted">Locações Realizadas:</small><br>
                    <strong>@(Model.Locacoes?.Count ?? 0)</strong>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Receita Gerada:</small><br>
                    <strong class="text-success">@(Model.Locacoes?.Sum(l => l.ValorTotal).ToString("C") ?? "R$ 0,00")</strong>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Tempo na Empresa:</small><br>
                    @{
                        var tempoEmpresa = DateTime.Now - Model.DataAdmissao;
                        var anos = tempoEmpresa.Days / 365;
                        var meses = (tempoEmpresa.Days % 365) / 30;
                    }
                    <strong>@anos ano(s) e @meses mês(es)</strong>
                </div>
                <div class="mb-3">
                    <small class="text-muted">Agência Atual:</small><br>
                    <strong>@(Model.Agencia?.Nome ?? "Não definida")</strong>
                </div>

                @if (Model.Locacoes?.Any() == true)
                {
                    <div class="alert alert-success">
                        <small>
                            <i class="fas fa-star me-1"></i>
                            Funcionário ativo com @Model.Locacoes.Count locação(ões) realizadas.
                        </small>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">
                        <small>
                            <i class="fas fa-info-circle me-1"></i>
                            Funcionário ainda não realizou locações.
                        </small>
                    </div>
                }
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header bg-success text-white">
                <h6 class="mb-0">
                    <i class="fas fa-tools me-1"></i>Ações Rápidas
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Locacoes" asp-action="Create" asp-route-funcionarioId="@Model.Id" class="btn btn-outline-primary btn-sm">
                        <i class="fas fa-plus me-1"></i>Nova Locação
                    </a>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info btn-sm">
                        <i class="fas fa-eye me-1"></i>Ver Histórico Completo
                    </a>
                    @if (Model.Agencia != null)
                    {
                        <a asp-controller="Agencias" asp-action="Details" asp-route-id="@Model.AgenciaId" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-building me-1"></i>Ver Agência
                        </a>
                    }
                </div>
            </div>
        </div>

        @* Card com dicas de segurança *@
        <div class="card mt-3 border-warning">
            <div class="card-header bg-warning text-dark">
                <h6 class="mb-0">
                    <i class="fas fa-exclamation-triangle me-1"></i>Importante
                </h6>
            </div>
            <div class="card-body">
                <small>
                    <ul class="mb-0">
                        <li>O CPF não pode ser alterado por segurança</li>
                        <li>Verifique se o e-mail está correto</li>
                        <li>Mudanças de agência afetam as permissões</li>
                        <li>O histórico de locações será mantido</li>
                    </ul>
                </small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Máscara para telefone
        document.addEventListener('DOMContentLoaded', function() {
            const telefoneInput = document.querySelector('[id="telefoneInput"]');

            if (telefoneInput) {
                telefoneInput.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\D/g, '');

                    if (value.length <= 10) {
                        // Formato: (99) 9999-9999
                        value = value.replace(/(\d{2})(\d{4})(\d{0,4})/, '($1) $2-$3');
                    } else {
                        // Formato: (99) 99999-9999
                        value = value.replace(/(\d{2})(\d{5})(\d{0,4})/, '($1) $2-$3');
                    }

                    e.target.value = value;
                });
            }
        });
    </script>
}
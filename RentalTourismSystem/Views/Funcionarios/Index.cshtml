@model IEnumerable<RentalTourismSystem.Models.Funcionario>
@{
    ViewData["Title"] = "Funcionários";
}

<div class="row mb-4">
    <div class="col-12">
        <h2>
            <i class="fas fa-user-tie me-2"></i>Funcionários
        </h2>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-3">
        <form method="get">
            <input type="hidden" name="cargo" value="@ViewBag.Cargo" />
            <select name="agenciaId" class="form-select" onchange="this.form.submit()">
                <option value="">Todas as agências</option>
                @foreach (var item in ViewBag.AgenciaId as SelectList)
                {
                    <option value="@item.Value" selected="@item.Selected">@item.Text</option>
                }
            </select>
        </form>
    </div>
    <div class="col-md-5">
        <form method="get" class="d-flex">
            <input type="hidden" name="agenciaId" value="@ViewBag.AgenciaId" />
            <input type="text" name="cargo" value="@ViewBag.Cargo" class="form-control me-2"
                   placeholder="Buscar por cargo...">
            <button type="submit" class="btn btn-outline-primary">
                <i class="fas fa-search"></i>
            </button>
        </form>
    </div>
    <div class="col-md-4 text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Novo Funcionário
        </a>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Nome</th>
                        <th>Cargo</th>
                        <th>Agência</th>
                        <th>Telefone</th>
                        <th>Salário</th>
                        <th>Admissão</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.Nome</strong><br>
                                <small class="text-muted">@item.Email</small>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@item.Cargo</span>
                            </td>
                            <td>@item.Agencia.Nome</td>
                            <td>@item.Telefone</td>
                            <td>@item.Salario.ToString("C")</td>
                            <td>@item.DataAdmissao.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Detalhes">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!Model.Any())
        {
            <div class="text-center text-muted py-4">
                <i class="fas fa-user-tie fa-3x mb-3"></i>
                <p>Nenhum funcionário encontrado.</p>
            </div>
        }
    </div>
</div>
        }

        // ✅ NOVO: Mostrar detalhes do evento em modal
        function mostrarDetalhesEvento(evento) {
            const props = evento.extendedProps;
            
            // Se for o status atual, mostrar informações do veículo
            if (props.isStatusAtual) {
                NotificationSystem.info(`Status atual do veículo: ${props.statusNome}`);
                return;
            }

            const modalHtml = `
                <div class="modal fade modal-evento-detalhes" id="modalEventoDetalhes" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">
                                    <i class="fas fa-calendar-check me-2"></i>
                                    Detalhes da ${props.isReserva ? 'Reserva' : 'Locação'}
                                </h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <!-- Status Badge -->
                                <div class="text-center mb-3">
                                    <span class="info-badge" style="background-color: ${evento.backgroundColor}; color: white;">
                                        <i class="fas fa-circle me-1"></i>${props.status}
                                    </span>
                                    ${props.isAtrasada ? '<span class="info-badge bg-danger text-white"><i class="fas fa-exclamation-triangle me-1"></i>ATRASADA</span>' : ''}
                                </div>

                                <!-- Informações do Cliente -->
                                <div class="card mb-3 border-primary">
                                    <div class="card-header bg-primary text-white">
                                        <i class="fas fa-user me-2"></i>Cliente
                                    </div>
                                    <div class="card-body">
                                        <h6 class="mb-2">${props.clienteNome}</h6>
                                        ${props.clienteTelefone ? `
                                            <p class="mb-1">
                                                <i class="fas fa-phone text-success me-2"></i>
                                                <a href="tel:${props.clienteTelefone}">${props.clienteTelefone}</a>
                                                <button class="btn btn-sm btn-outline-success ms-2" onclick="window.open('https://wa.me/55${props.clienteTelefone.replace(/\D/g, '')}', '_blank')">
                                                    <i class="fab fa-whatsapp"></i> WhatsApp
                                                </button>
                                            </p>
                                        ` : ''}
                                        ${props.clienteEmail ? `
                                            <p class="mb-0">
                                                <i class="fas fa-envelope text-info me-2"></i>
                                                <a href="mailto:${props.clienteEmail}">${props.clienteEmail}</a>
                                            </p>
                                        ` : ''}
                                    </div>
                                </div>

                                <!-- Período da Locação -->
                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="card border-success">
                                            <div class="card-body">
                                                <h6 class="card-subtitle mb-2 text-muted">
                                                    <i class="fas fa-calendar-plus text-success"></i> Retirada
                                                </h6>
                                                <p class="card-text mb-0">${props.dataRetirada}</p>
                                                ${props.isReserva ? `<small class="text-muted">Em ${props.diasAteRetirada} dias</small>` : ''}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="card border-danger">
                                            <div class="card-body">
                                                <h6 class="card-subtitle mb-2 text-muted">
                                                    <i class="fas fa-calendar-minus text-danger"></i> Devolução
                                                </h6>
                                                <p class="card-text mb-0">${props.dataDevolucao}</p>
                                                <small class="text-muted">${props.duracaoDias} dias</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                ${props.dataDevolucaoReal ? `
                                    <div class="alert alert-success">
                                        <i class="fas fa-check-circle me-2"></i>
                                        <strong>Devolvido em:</strong> ${props.dataDevolucaoReal}
                                    </div>
                                ` : ''}

                                <!-- Valor -->
                                <div class="card border-success mb-3">
                                    <div class="card-body text-center">
                                        <h6 class="text-muted mb-1">Valor Total</h6>
                                        <h3 class="text-success mb-0">${props.valorTotal}</h3>
                                    </div>
                                </div>

                                <!-- Observações -->
                                ${props.observacoes ? `
                                    <div class="card border-info">
                                        <div class="card-body">
                                            <h6 class="card-subtitle mb-2 text-muted">
                                                <i class="fas fa-comment-alt text-info"></i> Observações
                                            </h6>
                                            <p class="card-text mb-0">${props.observacoes}</p>
                                        </div>
                                    </div>
                                ` : ''}
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                                <a href="/Locacoes/Details/${props.locacaoId}" class="btn btn-primary">
                                    <i class="fas fa-eye me-1"></i>Ver Detalhes Completos
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            `;

            // Remover modal anterior
            const oldModal = document.getElementById('modalEventoDetalhes');
            if (oldModal) oldModal.remove();

            // Adicionar e mostrar novo modal
            document.body.insertAdjacentHTML('beforeend', modalHtml);
            const modal = new bootstrap.Modal(document.getElementById('modalEventoDetalhes'));
            modal.show();

            // Limpar modal após fechar
            document.getElementById('modalEventoDetalhes').addEventListener('hidden.bs.modal', function() {
                this.remove();
            });
        }

        // Inicializar calendário quando a página carregar
        $(document).ready(function() {
            inicializarCalendario();
        });
    </script>
}
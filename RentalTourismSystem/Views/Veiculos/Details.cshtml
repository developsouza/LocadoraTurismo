                    for (const [check, valido] of Object.entries(checks)) {
                        const icon = valido ? 'fas fa-check-circle text-success' : 'fas fa-times-circle text-danger';
                        html += '<p><i class="' + icon + ' me-2"></i>' + check + '</p>';

<!-- ✅ NOVO: Seção de Reservas Futuras -->
@if (temReservas)
{
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-info border-info shadow-sm" style="border-left: 4px solid var(--info);">
                <div class="d-flex align-items-center mb-3">
                    <div class="flex-shrink-0">
                        <i class="fas fa-calendar-check fa-2x text-info"></i>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5 class="alert-heading mb-1">
                            <i class="fas fa-bookmark me-2"></i>Reservas Futuras
                        </h5>
                        <p class="mb-0 small">
                            Este veículo possui <strong>@reservasFuturas.Count reserva(s)</strong> confirmada(s) para as próximas datas.
                        </p>
                    </div>
                </div>

                <div class="row g-3">
                    @foreach (var reserva in reservasFuturas)
                    {
                        var diasAteRetirada = (reserva.DataRetirada.Date - dataAtual).Days;
                        var duracaoDias = (int)Math.Ceiling((reserva.DataDevolucao - reserva.DataRetirada).TotalDays);
                        var isProximaReserva = reserva == reservasFuturas.First();
                        
                        <div class="col-md-6 col-lg-4">
                            <div class="card @(isProximaReserva ? "border-warning" : "border-secondary") h-100">
                                @if (isProximaReserva)
                                {
                                    <div class="card-header bg-warning text-dark py-1">
                                        <small><i class="fas fa-star me-1"></i><strong>Próxima Reserva</strong></small>
                                    </div>
                                }
                                <div class="card-body p-3">
                                    <!-- Cliente -->
                                    <div class="mb-2">
                                        <i class="fas fa-user text-primary me-2"></i>
                                        <strong>@(reserva.Cliente?.Nome ?? "Cliente N/A")</strong>
                                    </div>

                                    <!-- Telefone -->
                                    @if (!string.IsNullOrEmpty(reserva.Cliente?.Telefone))
                                    {
                                        <div class="mb-2">
                                            <i class="fas fa-phone text-success me-2"></i>
                                            <a href="tel:@reserva.Cliente.Telefone" class="text-decoration-none">
                                                @reserva.Cliente.Telefone
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-secondary ms-1 p-0 px-1" 
                                                    onclick="copiarTexto('@reserva.Cliente.Telefone')" 
                                                    title="Copiar telefone">
                                                <i class="fas fa-copy"></i>
                                            </button>
                                        </div>
                                    }

                                    <!-- Email -->
                                    @if (!string.IsNullOrEmpty(reserva.Cliente?.Email))
                                    {
                                        <div class="mb-2">
                                            <i class="fas fa-envelope text-info me-2"></i>
                                            <a href="mailto:@reserva.Cliente.Email" class="text-decoration-none small">
                                                @reserva.Cliente.Email
                                            </a>
                                        </div>
                                    }

                                    <hr class="my-2">

                                    <!-- Data de Retirada -->
                                    <div class="mb-1">
                                        <small class="text-muted">
                                            <i class="fas fa-calendar-plus text-primary me-1"></i>
                                            <strong>Retirada:</strong>
                                        </small>
                                        <br>
                                        <span class="badge bg-primary">
                                            @reserva.DataRetirada.ToString("dd/MM/yyyy HH:mm")
                                        </span>
                                        <small class="text-muted ms-1">
                                            (em @diasAteRetirada dia@(diasAteRetirada != 1 ? "s" : ""))
                                        </small>
                                    </div>

                                    <!-- Data de Devolução -->
                                    <div class="mb-2">
                                        <small class="text-muted">
                                            <i class="fas fa-calendar-minus text-danger me-1"></i>
                                            <strong>Devolução:</strong>
                                        </small>
                                        <br>
                                        <span class="badge bg-secondary">
                                            @reserva.DataDevolucao.ToString("dd/MM/yyyy HH:mm")
                                        </span>
                                        <small class="text-muted ms-1">
                                            (@duracaoDias dia@(duracaoDias != 1 ? "s" : ""))
                                        </small>
                                    </div>

                                    <!-- Valor -->
                                    <div class="mb-2">
                                        <i class="fas fa-dollar-sign text-success me-2"></i>
                                        <strong class="text-success">@reserva.ValorTotal.ToString("C")</strong>
                                    </div>

                                    <!-- Ações -->
                                    <div class="d-grid gap-1 mt-3">
                                        <a href="#" onclick="verDetalhesLocacao(@reserva.Id)" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye me-1"></i>Ver Detalhes
                                        </a>
                                        @if (User.IsInRole("Admin") || User.IsInRole("Manager") || User.IsInRole("Employee"))
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-info" 
                                                    onclick="contatarCliente('@(reserva.Cliente?.Nome ?? "")', '@(reserva.Cliente?.Telefone ?? "")', '@(reserva.Cliente?.Email ?? "")')">
                                                <i class="fas fa-comments me-1"></i>Contatar Cliente
                                            </button>
                                        }
                                    </div>
                                </div>
                                @if (isProximaReserva && diasAteRetirada <= 3)
                                {
                                    <div class="card-footer bg-warning text-dark py-1">
                                        <small>
                                            <i class="fas fa-exclamation-triangle me-1"></i>
                                            Retirada em breve!
                                        </small>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>

                <!-- Informação Adicional -->
                <div class="mt-3 p-2 bg-light rounded">
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>
                        <strong>Status Atual:</strong> 
                        <span class="badge bg-info">@statusAtual</span>
                        O veículo será automaticamente marcado como <strong>"Alugado"</strong> na data de retirada da reserva.
                    </small>
                </div>
            </div>
        </div>
    </div>
}

